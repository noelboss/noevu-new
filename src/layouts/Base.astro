---
import '../styles/global.css';
import '../styles/themes.css';
import CookieBanner from '../components/ui/CookieBanner.astro';

interface Props {
  title: string;
  description: string;
  image?: string;
  noIndex?: boolean;
  canonicalUrl?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
}

const {
  title,
  description,
  image,
  noIndex = false,
  canonicalUrl,
  type = 'website',
  publishedTime,
  modifiedTime,
  author,
} = Astro.props;

const siteUrl = import.meta.env.SITE || 'https://noevu.ch';
const fullCanonicalUrl = canonicalUrl || Astro.url.href;
const fullImageUrl = image ? new URL(image, siteUrl).href : `${siteUrl}/images/og-default.png`;

// Organization structured data
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Noevu GmbH",
  "legalName": "Noevu GmbH",
  "url": siteUrl,
  "logo": `${siteUrl}/images/logos/noevu-logo.png`,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Zürichstrasse 131",
    "addressLocality": "Dübendorf",
    "addressRegion": "ZH",
    "postalCode": "8600",
    "addressCountry": "CH"
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+41-44-505-10-20",
    "contactType": "customer service",
    "availableLanguage": ["German", "English"]
  },
  "sameAs": [
    "https://www.linkedin.com/company/noevu-swiss/",
    "https://www.facebook.com/people/Noevu-GmbH/61558039392256/"
  ]
};

// LocalBusiness structured data
const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "Noevu GmbH – Webdesign und Marketing Agentur",
  "image": `${siteUrl}/images/logos/noevu-logo.png`,
  "priceRange": "CHF2500-CHF15000",
  "telephone": "+41 44 505 10 20",
  "email": "hello@noevu.ch",
  "url": siteUrl,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Zürichstrasse 131",
    "addressLocality": "Dübendorf",
    "addressRegion": "Zürich",
    "postalCode": "8600",
    "addressCountry": "CH"
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "08:00",
      "closes": "18:00"
    }
  ],
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5.0",
    "reviewCount": "12"
  }
};
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}
    <link rel="canonical" href={fullCanonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={fullCanonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:locale" content="de_CH" />
    <meta property="og:site_name" content="Noevu GmbH" />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
    {author && <meta property="article:author" content={author} />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={fullCanonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    {fullImageUrl && <meta property="twitter:image" content={fullImageUrl} />}

    <!-- Favicon -->
    <link rel="icon" type="image/webp" href="/favicon.webp" />

    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="Noevu Blog RSS" href="/rss.xml" />

    <!-- Preconnect for fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Original noevu.ch fonts: Abril Fatface (headings) + Heebo (body) -->
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <!-- Material Symbols for icons -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&display=swap" rel="stylesheet" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Zum Hauptinhalt springen</a>
    <slot />
    <CookieBanner />
  </body>
</html>

<style is:global>
  .skip-link {
    position: absolute;
    top: -100%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 9999;
    padding: var(--space-3) var(--space-6);
    background-color: var(--color-primary);
    color: var(--color-text-inverted);
    font-weight: var(--font-medium);
    text-decoration: none;
    border-radius: var(--radius);
    transition: top 0.2s ease;
  }

  .skip-link:focus {
    top: var(--space-4);
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
</style>
