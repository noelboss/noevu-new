---

<footer class="footer">
  <div class="footer__container container">
    <div class="footer__main">
      <div class="footer__brand">
        <a href="/" class="footer__logo" aria-label="Noevu - Zur Startseite">
          <svg viewBox="0 0 120 40" fill="currentColor" aria-hidden="true">
            <text x="0" y="28" font-family="Inter, sans-serif" font-size="24" font-weight="700">noevu</text>
          </svg>
        </a>
        {company.tagline && <p class="footer__tagline">{company.tagline}</p>}

        <address class="footer__contact">
          <p>
            {contact.address.street}<br />
            {contact.address.zip} {contact.address.city}
          </p>
          <p>
            <a href={`tel:${contact.phone.replace(/\s/g, '')}`}>{contact.phone}</a>
          </p>
          <p>
            <a href={`mailto:${contact.email}`}>{contact.email}</a>
          </p>
        </address>

        {social.length > 0 && (
          <div class="footer__social">
            {social.map((item) => (
              <a
                href={item.href}
                class="footer__social-link"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={item.label || item.platform}
              >
                <Fragment set:html={socialIcons[item.platform] || ''} />
              </a>
            ))}
          </div>
        )}
      </div>

      <div class="footer__nav">
        {footer.columns.map((column) => (
          <div class="footer__column">
            <h3 class="footer__column-title">{column.title}</h3>
            <ul class="footer__links">
              {column.links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="footer__link"
                    target={link.external ? '_blank' : undefined}
                    rel={link.external ? 'noopener noreferrer' : undefined}
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {currentYear} {company.legalName}. Alle Rechte vorbehalten.
      </p>
      <nav class="footer__legal" aria-label="Rechtliches">
        <a href="/impressum">Impressum</a>
        <a href="/datenschutz">Datenschutz</a>
      </nav>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-primary);
    color: var(--color-text-inverted);
    padding-block: var(--space-16) var(--space-8);
  }

  .footer__main {
    display: grid;
    gap: var(--space-12);
    margin-bottom: var(--space-12);
  }

  @media (min-width: 1024px) {
    .footer__main {
      grid-template-columns: 1fr 2fr;
      gap: var(--space-16);
    }
  }

  .footer__brand {
    max-width: 300px;
  }

  .footer__logo {
    display: inline-block;
    color: var(--color-text-inverted);
    margin-bottom: var(--space-4);
  }

  .footer__logo svg {
    height: 2rem;
    width: auto;
  }

  .footer__tagline {
    font-size: var(--text-base);
    color: var(--color-primary-200);
    margin-bottom: var(--space-6);
  }

  .footer__contact {
    font-style: normal;
    font-size: var(--text-sm);
    color: var(--color-primary-100);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
  }

  .footer__contact p {
    margin-bottom: var(--space-2);
  }

  .footer__contact a {
    color: var(--color-primary-100);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__contact a:hover {
    color: var(--color-text-inverted);
  }

  .footer__social {
    display: flex;
    gap: var(--space-3);
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.25rem;
    height: 2.25rem;
    background-color: var(--color-primary-600);
    border-radius: var(--radius);
    color: var(--color-text-inverted);
    transition: background-color var(--transition-fast);
  }

  .footer__social-link:hover {
    background-color: var(--color-primary-400);
    color: var(--color-text-inverted);
  }

  .footer__social-link :global(svg) {
    width: 1.125rem;
    height: 1.125rem;
  }

  .footer__nav {
    display: grid;
    gap: var(--space-8);
  }

  @media (min-width: 640px) {
    .footer__nav {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer__nav {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .footer__column-title {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-inverted);
    margin-bottom: var(--space-4);
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__link {
    display: inline-block;
    padding-block: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-primary-100);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__link:hover {
    color: var(--color-text-inverted);
  }

  .footer__bottom {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-primary-600);
  }

  @media (min-width: 768px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }

  .footer__copyright {
    font-size: var(--text-sm);
    color: var(--color-primary-200);
    margin: 0;
  }

  .footer__legal {
    display: flex;
    gap: var(--space-6);
  }

  .footer__legal a {
    font-size: var(--text-sm);
    color: var(--color-primary-200);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__legal a:hover {
    color: var(--color-text-inverted);
  }
</style>
