---
import type { Navigation } from '../../schemas/navigation';
import type { SiteConfig } from '../../schemas/site';

interface Props {
  navigation: Navigation;
  site: SiteConfig;
}

const { navigation, site } = Astro.props;
const { footer, social } = navigation;
const { company, contact } = site;

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer__container container">
    <div class="footer__main">
      <!-- Brand Column -->
      <div class="footer__brand">
        <a href="/" class="footer__logo" aria-label="Noevu - Zur Startseite">
          <img src="/images/brand/noevu-logo.png" alt="Noevu" class="footer__logo-img" />
        </a>
        <address class="footer__address">
          <p class="footer__company">{company.legalName}</p>
          <p>{contact.address.street}</p>
          <p>{contact.address.zip} {contact.address.city}</p>
          <p>{contact.address.country || 'Schweiz'}</p>
        </address>
      </div>

      <!-- Contact Column -->
      <div class="footer__column">
        <h3 class="footer__column-title">
          <span class="footer__dot"></span>
          Kontakt
        </h3>
        <ul class="footer__links">
          <li>
            <a href={`tel:${contact.phone.replace(/\s/g, '')}`} class="footer__link footer__link--contact">
              <span class="material-symbols-outlined">call</span>
              {contact.phone}
            </a>
          </li>
          <li>
            <a href={`mailto:${contact.email}`} class="footer__link footer__link--contact">
              <span class="material-symbols-outlined">mail</span>
              {contact.email}
            </a>
          </li>
          <li>
            <a href="/termin" class="footer__link footer__link--contact">
              <span class="material-symbols-outlined">calendar_month</span>
              Termin buchen
            </a>
          </li>
        </ul>
      </div>

      <!-- Navigation Columns -->
      {footer.columns.map((column) => (
        <div class="footer__column">
          <h3 class="footer__column-title">
            <span class="footer__dot"></span>
            {column.title}
          </h3>
          <ul class="footer__links">
            {column.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="footer__link"
                  target={link.external ? '_blank' : undefined}
                  rel={link.external ? 'noopener noreferrer' : undefined}
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Bar -->
    <div class="footer__bottom">
      <div class="footer__bottom-left">
        <!-- Partner Badge -->
        <div class="footer__badge">
          <img
            src="/images/badges/squarespace-gold-partner.svg"
            alt="Squarespace Circle Gold Partner"
            width="80"
            height="40"
            loading="lazy"
          />
        </div>

        <!-- Social Links -->
        {social.length > 0 && (
          <div class="footer__social">
            {social.map((item) => (
              <a
                href={item.href}
                class="footer__social-link"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={item.label || item.platform}
              >
                {item.platform === 'linkedin' && (
                  <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                )}
                {item.platform === 'facebook' && (
                  <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                    <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
                  </svg>
                )}
                {item.platform === 'instagram' && (
                  <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        )}
      </div>

      <div class="footer__bottom-center">
        <p class="footer__copyright">
          &copy; {currentYear} {company.legalName}. Alle Rechte Vorbehalten.
        </p>
        <nav class="footer__legal" aria-label="Rechtliches">
          <a href="/datenschutz-impressum">Datenschutz & Impressum</a>
          <span class="footer__legal-sep">–</span>
          <a href="/llms">Infos für LLMs</a>
        </nav>
      </div>

      <div class="footer__bottom-right">
        <div class="footer__lang">
          <span class="material-symbols-outlined footer__lang-icon">translate</span>
          <a href="/de" class="footer__lang-link footer__lang-link--active">Deutsch</a>
          <a href="/en" class="footer__lang-link">English</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-green, #255a4e);
    color: white;
    padding-block: 4rem 2rem;
  }

  .footer__main {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 640px) {
    .footer__main {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer__main {
      grid-template-columns: 1.2fr 1fr repeat(4, 1fr);
      gap: 2rem;
    }
  }

  /* ═══════════════════════════════════════════════════════════════
     BRAND COLUMN
     ═══════════════════════════════════════════════════════════════ */
  .footer__brand {
    grid-column: 1;
  }

  .footer__logo {
    display: inline-block;
    text-decoration: none;
    margin-bottom: 1.5rem;
  }

  .footer__logo-img {
    height: 2.5rem;
    width: auto;
    display: block;
    filter: brightness(0) invert(1); /* Make logo white */
  }

  .footer__address {
    font-style: normal;
    font-size: 0.875rem;
    line-height: 1.7;
    color: hsla(0, 0%, 100%, 0.8);
  }

  .footer__address p {
    margin: 0;
  }

  .footer__company {
    font-weight: 600;
    color: white;
    margin-bottom: 0.25rem !important;
  }

  /* ═══════════════════════════════════════════════════════════════
     NAVIGATION COLUMNS
     ═══════════════════════════════════════════════════════════════ */
  .footer__column {
    min-width: 0;
  }

  .footer__column-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-sans);
    font-size: 0.8125rem;
    font-weight: 500;
    color: white;
    margin-bottom: 1rem;
    text-transform: none;
    letter-spacing: 0;
  }

  .footer__dot {
    display: inline-block;
    width: 6px;
    height: 6px;
    background: var(--color-orange, #ff6b30);
    border-radius: 50%;
    box-shadow: 0 0 6px var(--color-orange, #ff6b30);
  }

  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer__links li {
    margin-bottom: 0.25rem;
  }

  .footer__link {
    display: inline-block;
    font-size: 0.8125rem;
    color: hsla(0, 0%, 100%, 0.8);
    text-decoration: underline;
    text-decoration-color: hsla(0, 0%, 100%, 0.3);
    text-underline-offset: 3px;
    transition: color 0.2s ease, text-decoration-color 0.2s ease;
    padding-block: 0.125rem;
  }

  .footer__link:hover {
    color: white;
    text-decoration-color: white;
  }

  .footer__link--contact {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
  }

  .footer__link--contact .material-symbols-outlined {
    font-size: 1rem;
    opacity: 0.7;
  }

  .footer__link--contact:hover {
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  /* ═══════════════════════════════════════════════════════════════
     BOTTOM BAR
     ═══════════════════════════════════════════════════════════════ */
  .footer__bottom {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding-top: 2rem;
    border-top: 1px solid hsla(0, 0%, 100%, 0.15);
  }

  @media (min-width: 1024px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }

  .footer__bottom-left {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .footer__badge img {
    height: 32px;
    width: auto;
    opacity: 0.9;
    filter: brightness(0) invert(1);
  }

  .footer__social {
    display: flex;
    gap: 0.75rem;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    color: white;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .footer__social-link:hover {
    opacity: 1;
  }

  .footer__social-link svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  .footer__bottom-center {
    text-align: center;
  }

  @media (min-width: 1024px) {
    .footer__bottom-center {
      text-align: left;
    }
  }

  .footer__copyright {
    font-size: 0.75rem;
    color: hsla(0, 0%, 100%, 0.6);
    margin: 0 0 0.25rem 0;
  }

  .footer__legal {
    display: flex;
    gap: 0.5rem;
    font-size: 0.75rem;
    justify-content: center;
  }

  @media (min-width: 1024px) {
    .footer__legal {
      justify-content: flex-start;
    }
  }

  .footer__legal a {
    color: hsla(0, 0%, 100%, 0.6);
    text-decoration: underline;
    text-decoration-color: hsla(0, 0%, 100%, 0.3);
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }

  .footer__legal a:hover {
    color: white;
  }

  .footer__legal-sep {
    color: hsla(0, 0%, 100%, 0.4);
  }

  .footer__bottom-right {
    display: flex;
    justify-content: center;
  }

  @media (min-width: 1024px) {
    .footer__bottom-right {
      justify-content: flex-end;
    }
  }

  .footer__lang {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.8125rem;
  }

  .footer__lang-icon {
    font-size: 1.125rem;
    opacity: 0.6;
  }

  .footer__lang-link {
    color: hsla(0, 0%, 100%, 0.6);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer__lang-link:hover {
    color: white;
  }

  .footer__lang-link--active {
    color: white;
    text-decoration: underline;
    text-underline-offset: 3px;
  }
</style>
