---
/**
 * Related Posts Component
 *
 * Displays related blog posts based on shared categories.
 * Used at the bottom of blog post pages.
 */
import { getCollection } from 'astro:content';

interface Props {
  currentSlug: string;
  categories: string[];
  limit?: number;
}

const { currentSlug, categories, limit = 3 } = Astro.props;

/**
 * Calculate reading time from text content
 */
function calculateReadingTime(text: string): number {
  const wordsPerMinute = 200;
  const words = text.trim().split(/\s+/).length;
  const minutes = Math.ceil(words / wordsPerMinute);
  return Math.max(1, minutes);
}

// Get all posts and filter for related ones
const allPosts = await getCollection('blog');

// Find posts that share at least one category with the current post
const relatedPosts = allPosts
  .filter((post) => {
    const slug = post.data.slug || post.id.replace(/\.md$/, '');
    // Exclude current post
    if (slug === currentSlug) return false;

    // Check for shared categories
    const postCategories = post.data.categories || [];
    return postCategories.some((cat: string) =>
      categories.map((c) => c.toLowerCase()).includes(cat.toLowerCase())
    );
  })
  .map((post) => ({
    title: post.data.title,
    slug: post.data.slug || post.id.replace(/\.md$/, ''),
    excerpt: post.data.excerpt,
    featuredImage: post.data.featuredImage,
    categories: post.data.categories || [],
    publishedAt: post.data.publishedAt,
    readingTime: post.data.readingTime || calculateReadingTime(post.body || ''),
  }))
  .sort((a, b) => new Date(b.publishedAt).getTime() - new Date(a.publishedAt).getTime())
  .slice(0, limit);

// Format date for German locale
function formatDate(dateString: string) {
  return new Date(dateString).toLocaleDateString('de-CH', {
    day: '2-digit',
    month: 'short',
    year: '2-digit',
  });
}
---

{relatedPosts.length > 0 && (
  <section class="related-posts">
    <div class="container">
      <h2 class="related-posts__title">Das könnte dich auch interessieren</h2>

      <div class="related-posts__grid">
        {relatedPosts.map((post) => (
          <article class="related-post">
            <a href={`/blog/${post.slug}`} class="related-post__link">
              {post.featuredImage && (
                <div class="related-post__image">
                  <img src={post.featuredImage} alt={post.title} loading="lazy" />
                </div>
              )}
              <div class="related-post__content">
                {post.categories.length > 0 && (
                  <span class="related-post__category">
                    {post.categories[0]}
                  </span>
                )}
                <h3 class="related-post__title">{post.title}</h3>
                <div class="related-post__meta">
                  <time datetime={post.publishedAt}>
                    {formatDate(post.publishedAt)}
                  </time>
                  {post.readingTime && (
                    <span>· {post.readingTime} Min.</span>
                  )}
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>
)}

<style>
  .related-posts {
    background-color: var(--color-bg-beige);
    padding-block: var(--space-16);
    position: relative;
    overflow: hidden;
  }

  .related-posts__title {
    font-size: clamp(var(--text-2xl), 4vw, var(--text-3xl));
    font-family: var(--font-display);
    font-weight: var(--font-normal);
    text-align: center;
    margin-bottom: var(--space-12);
    /* Gradient text matching BlogGrid */
    background: linear-gradient(120deg, var(--color-primary) 0%, var(--color-neutral-700) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .related-posts__grid {
    display: grid;
    gap: var(--space-6);
  }

  @media (min-width: 640px) {
    .related-posts__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .related-posts__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Glass morphism card matching BlogCard */
  .related-post {
    background-color: hsla(var(--color-white-hsl), 0.75);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border-radius: calc(var(--radius-lg) * 1.5);
    overflow: hidden;
    padding: 8px;
    /* 3-layer shadow pattern */
    box-shadow:
      0 0 15px hsla(var(--color-white-hsl), 0.3),
      inset 5px 0 20px 0 hsla(var(--color-white-hsl), 0.5),
      inset 0 -30px 30px 0 hsla(var(--color-white-hsl), 0.3);
    transition: all 0.3s ease-out;
  }

  .related-post:hover {
    transform: translateY(-4px);
    background-color: hsla(var(--color-white-hsl), 0.9);
    box-shadow:
      0 0 20px hsla(var(--color-white-hsl), 0.4),
      0 10px 40px -10px hsla(var(--color-green-hsl), 0.15),
      inset 0 0 20px 0 hsla(var(--color-white-hsl), 0.75);
    filter: brightness(1.02);
  }

  .related-post__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .related-post__image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    border-radius: var(--radius-lg);
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
  }

  .related-post__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease-out, filter 0.3s ease-out;
  }

  .related-post:hover .related-post__image img {
    transform: scale(1.05);
    filter: brightness(1.05);
  }

  .related-post__content {
    padding: var(--space-5);
    background-color: hsla(var(--color-white-hsl), 0.5);
    border-radius: 0 0 var(--radius-lg) var(--radius-lg);
    transition: background-color 0.3s ease-out;
  }

  .related-post:hover .related-post__content {
    background-color: hsla(var(--color-white-hsl), 0.65);
  }

  /* Tag-style category pill */
  .related-post__category {
    display: inline-block;
    font-size: 14px;
    font-weight: var(--font-normal);
    color: hsla(var(--color-green-hsl), 0.75);
    background-color: hsla(var(--color-green-hsl), 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 4px 12px;
    border-radius: 100px;
    margin-bottom: var(--space-3);
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .related-post:hover .related-post__category {
    background-color: hsla(var(--color-green-hsl), 0.15);
    color: hsla(var(--color-green-hsl), 1);
  }

  /* Title with gradient text */
  .related-post__title {
    font-size: var(--text-lg);
    font-family: var(--font-heading);
    font-weight: var(--font-normal);
    line-height: var(--leading-snug);
    margin-bottom: var(--space-3);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    /* Gradient text matching BlogCard */
    background: linear-gradient(120deg, var(--color-primary) 0.26%, var(--color-neutral-600) 118%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    transition: all 0.3s ease;
  }

  .related-post:hover .related-post__title {
    background: linear-gradient(120deg, var(--color-primary-600) 0%, var(--color-neutral-700) 100%);
    -webkit-background-clip: text;
    background-clip: text;
  }

  /* Tag-style meta */
  .related-post__meta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: 14px;
    color: hsla(var(--color-green-hsl), 0.75);
    background-color: hsla(var(--color-green-hsl), 0.1);
    padding: 4px 12px;
    border-radius: 100px;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .related-posts {
      padding-block: var(--space-12);
    }

    .related-posts__title {
      margin-bottom: var(--space-8);
    }

    .related-post__content {
      padding: var(--space-4);
    }
  }
</style>
