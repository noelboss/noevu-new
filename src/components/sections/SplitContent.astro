---
import type { SplitContentSection } from '../../schemas/sections';

interface Props {
  data: SplitContentSection;
}

const { data } = Astro.props;
const {
  layout = 'imageLeft',
  image,
  title,
  subtitle,
  content,
  cta,
  backgroundColor = 'beige',
} = data;

const bgClass = `bg-${backgroundColor}`;
const layoutClass = `split-content--${layout}`;
---

<section class={`split-content section ${bgClass} ${layoutClass}`}>
  <div class="split-content__container container">
    {image && (
      <div class="split-content__image">
        <img
          src={image.src}
          alt={image.alt}
          width={image.width}
          height={image.height}
          loading="lazy"
        />
      </div>
    )}

    <div class="split-content__text">
      {subtitle && <p class="split-content__subtitle">{subtitle}</p>}
      <h2 class="split-content__title">{title}</h2>
      <div class="split-content__content" set:html={content} />
      {cta && (
        <a
          href={cta.href}
          class={`btn btn--${cta.variant || 'primary'}`}
          target={cta.external ? '_blank' : undefined}
          rel={cta.external ? 'noopener noreferrer' : undefined}
        >
          {cta.label}
        </a>
      )}
    </div>
  </div>
</section>

<style>
  .split-content__container {
    display: grid;
    gap: var(--space-12);
    align-items: center;
  }

  @media (min-width: 1024px) {
    .split-content__container {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-16);
    }

    .split-content--imageRight .split-content__image {
      order: 2;
    }
  }

  .split-content__image img {
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
  }

  .split-content__subtitle {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-3);
  }

  .split-content__title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-6);
  }

  .split-content__content {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin-bottom: var(--space-8);
    line-height: var(--leading-relaxed);
  }

  .split-content__content :global(p) {
    margin-bottom: var(--space-4);
  }

  .split-content__content :global(ul) {
    list-style: none;
    padding: 0;
  }

  .split-content__content :global(li) {
    position: relative;
    padding-left: var(--space-6);
    margin-bottom: var(--space-2);
  }

  .split-content__content :global(li::before) {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--color-primary);
    font-weight: var(--font-bold);
  }

  /* Orange background variant */
  .bg-orange {
    background-color: var(--color-accent);
    color: var(--color-text-inverted);
  }

  .bg-orange .split-content__title,
  .bg-orange .split-content__content {
    color: var(--color-text-inverted);
  }

  .bg-orange .split-content__subtitle {
    color: var(--color-accent-100);
  }

  /* Green background variant */
  .bg-green {
    background-color: var(--color-primary);
    color: var(--color-text-inverted);
  }

  .bg-green .split-content__title,
  .bg-green .split-content__content {
    color: var(--color-text-inverted);
  }

  .bg-green .split-content__subtitle {
    color: var(--color-primary-200);
  }
</style>
