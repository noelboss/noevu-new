---
import type { SplitContentSection, Theme } from '../../schemas/sections';
import { parseInlineMarkdown } from '../../utils/markdown';

interface Props {
  data: SplitContentSection;
  theme?: Theme;
}

const { data, theme } = Astro.props;
const {
  layout = 'imageLeft',
  image,
  title,
  subtitle,
  content,
  cta,
  backgroundColor = 'beige',
} = data;

// Use theme system when available, fall back to backgroundColor classes for backward compatibility
const bgClass = theme ? '' : `bg-${backgroundColor}`;
const layoutClass = `split-content--${layout}`;
const parsedTitle = parseInlineMarkdown(title);
const parsedSubtitle = parseInlineMarkdown(subtitle);
const parsedContent = parseInlineMarkdown(content);
---

<section class={`split-content section ${bgClass} ${layoutClass}`} data-theme={theme}>
  <div class="split-content__container container">
    {image && (
      <div class="split-content__image">
        <img
          src={image.src}
          alt={image.alt}
          width={image.width}
          height={image.height}
          loading="lazy"
        />
      </div>
    )}

    <div class="split-content__text">
      {parsedSubtitle && <p class="split-content__subtitle" set:html={parsedSubtitle} />}
      {parsedTitle && <h2 class="split-content__title" set:html={parsedTitle} />}
      <div class="split-content__content" set:html={parsedContent} />
      {cta && (
        <a
          href={cta.href}
          class={`btn btn--${cta.variant || 'primary'}`}
          target={cta.external ? '_blank' : undefined}
          rel={cta.external ? 'noopener noreferrer' : undefined}
        >
          {cta.label}
        </a>
      )}
    </div>
  </div>
</section>

<style>
  /* ═══════════════════════════════════════════════════════════════
     BASE STYLES
     ═══════════════════════════════════════════════════════════════ */
  .split-content {
    background-color: var(--color-bg-beige);
    color: var(--color-text);
    position: relative;
    overflow: hidden;
  }

  /* Theme system styles */
  .split-content[data-theme] {
    background-color: var(--theme-bg);
    color: var(--theme-text);
  }

  /* ═══════════════════════════════════════════════════════════════
     CONTAINER - Two-column grid layout
     ═══════════════════════════════════════════════════════════════ */
  .split-content__container {
    display: grid;
    gap: var(--space-10);
    align-items: center;
  }

  @media (min-width: 768px) {
    .split-content__container {
      gap: var(--space-12);
    }
  }

  @media (min-width: 1024px) {
    .split-content__container {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-16);
    }

    /* Image right layout - reorder columns */
    .split-content--imageRight .split-content__image {
      order: 2;
    }

    .split-content--imageRight .split-content__text {
      order: 1;
    }
  }

  /* ═══════════════════════════════════════════════════════════════
     IMAGE - Glass effect with 3-layer shadow
     ═══════════════════════════════════════════════════════════════ */
  .split-content__image {
    position: relative;
    overflow: hidden;
    border-radius: var(--radius-xl);
    /* 3-layer shadow: outer glow, spread shadow, inset highlight */
    box-shadow:
      0 0 30px rgba(37, 90, 78, 0.08),
      0 15px 50px -15px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    transition: all 0.4s ease;
  }

  .split-content__image::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: var(--radius-xl);
    border: 1px solid rgba(255, 255, 255, 0.1);
    pointer-events: none;
    z-index: 1;
  }

  .split-content__image img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: var(--radius-xl);
    transition: transform 0.5s ease, filter 0.3s ease;
  }

  .split-content__image:hover {
    box-shadow:
      0 0 40px rgba(37, 90, 78, 0.12),
      0 20px 60px -15px rgba(0, 0, 0, 0.25),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
    transform: translateY(-4px);
  }

  .split-content__image:hover img {
    transform: scale(1.03);
    filter: brightness(1.02);
  }

  /* ═══════════════════════════════════════════════════════════════
     TEXT CONTENT - Vertical alignment and spacing
     ═══════════════════════════════════════════════════════════════ */
  .split-content__text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-block: var(--space-4);
  }

  @media (min-width: 1024px) {
    .split-content__text {
      padding-block: var(--space-8);
    }
  }

  /* Subtitle / Eyebrow text - Glass pill style */
  .split-content__subtitle {
    display: inline-flex;
    align-items: center;
    width: fit-content;
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: var(--space-4);
    padding: 0.25rem 0.75rem;
    background: linear-gradient(
      135deg,
      hsla(17, 100%, 59%, 0.1) 0%,
      hsla(17, 100%, 59%, 0.05) 100%
    );
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: var(--radius-full);
    border: 1px solid hsla(17, 100%, 59%, 0.15);
  }

  .split-content[data-theme] .split-content__subtitle {
    color: var(--theme-accent);
  }

  /* Title / Heading */
  .split-content__title {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: var(--font-normal);
    line-height: var(--leading-tight);
    color: var(--color-text);
    margin-bottom: var(--space-5);
  }

  @media (min-width: 768px) {
    .split-content__title {
      font-size: var(--text-3xl);
      margin-bottom: var(--space-6);
    }
  }

  @media (min-width: 1024px) {
    .split-content__title {
      font-size: var(--text-4xl);
    }
  }

  .split-content[data-theme] .split-content__title {
    color: var(--theme-heading);
  }

  /* Content / Description */
  .split-content__content {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
  }

  @media (min-width: 768px) {
    .split-content__content {
      font-size: var(--text-lg);
      margin-bottom: var(--space-8);
    }
  }

  .split-content[data-theme] .split-content__content {
    color: var(--theme-text-muted);
  }

  /* Paragraph styling within content */
  .split-content__content :global(p) {
    margin-bottom: var(--space-4);
  }

  .split-content__content :global(p:last-child) {
    margin-bottom: 0;
  }

  /* List styling within content */
  .split-content__content :global(ul) {
    list-style: none;
    padding: 0;
    margin-bottom: var(--space-4);
  }

  .split-content__content :global(li) {
    position: relative;
    padding-left: var(--space-6);
    margin-bottom: var(--space-3);
    line-height: var(--leading-relaxed);
    transition: transform 0.2s ease;
  }

  .split-content__content :global(li:hover) {
    transform: translateX(4px);
  }

  .split-content__content :global(li::before) {
    content: '\2713';
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: var(--font-bold);
  }

  .split-content[data-theme] .split-content__content :global(li::before) {
    color: var(--theme-accent);
  }

  /* Strong and link styling within content */
  .split-content__content :global(strong) {
    color: var(--color-text);
    font-weight: var(--font-semibold);
  }

  .split-content[data-theme] .split-content__content :global(strong) {
    color: var(--theme-heading);
  }

  .split-content__content :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color var(--transition-fast);
  }

  .split-content__content :global(a:hover) {
    color: var(--color-primary-700);
  }

  .split-content[data-theme] .split-content__content :global(a) {
    color: var(--theme-accent);
  }

  /* ═══════════════════════════════════════════════════════════════
     CTA BUTTON - Hero-style with 3-layer shadow
     ═══════════════════════════════════════════════════════════════ */
  .split-content .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: 0.875rem 1.75rem;
    border-radius: var(--radius-full);
    font-weight: var(--font-medium);
    font-size: 0.9375rem;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid transparent;
    width: fit-content;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .split-content .btn--primary {
    background-color: var(--color-accent);
    color: var(--color-text-inverted);
    border-color: rgba(255, 255, 255, 0.25);
    /* 3-layer shadow: outer glow, spread glow, inset highlight */
    box-shadow:
      0 0 15px hsla(17, 100%, 59%, 0.3),
      8px 8px 40px hsla(17, 100%, 59%, 0.25),
      inset -5px -5px 10px rgba(255, 255, 255, 0.15);
  }

  .split-content .btn--primary:hover {
    background-color: var(--color-accent-600, #e55a20);
    transform: translateY(-2px);
    filter: brightness(1.05);
    box-shadow:
      0 0 20px hsla(17, 100%, 59%, 0.5),
      12px 12px 50px hsla(17, 100%, 59%, 0.4),
      inset -5px -5px 10px hsla(17, 100%, 80%, 0.2);
  }

  .split-content .btn--secondary {
    background: linear-gradient(
      135deg,
      rgba(37, 90, 78, 0.05) 0%,
      rgba(37, 90, 78, 0.02) 100%
    );
    color: var(--color-primary);
    border-color: hsla(163, 46%, 26%, 0.25);
    box-shadow:
      0 0 15px rgba(255, 255, 255, 0.1),
      8px 8px 40px hsla(163, 46%, 26%, 0.1);
  }

  .split-content .btn--secondary:hover {
    background: var(--color-primary);
    color: var(--color-text-inverted);
    transform: translateY(-2px);
    box-shadow:
      0 0 20px hsla(163, 46%, 26%, 0.4),
      12px 12px 50px hsla(163, 46%, 26%, 0.3),
      inset -5px -5px 10px rgba(255, 255, 255, 0.1);
  }

  .split-content .btn--text {
    background-color: transparent;
    color: var(--color-text);
    padding-left: 0;
    border: none;
    box-shadow: none;
    backdrop-filter: none;
  }

  .split-content .btn--text:hover {
    color: var(--color-accent);
    transform: translateX(4px);
  }

  /* ═══════════════════════════════════════════════════════════════
     LEGACY BACKGROUND COLOR VARIANTS
     For backward compatibility with backgroundColor prop
     ═══════════════════════════════════════════════════════════════ */

  /* Beige background (default) */
  .bg-beige {
    background-color: var(--color-bg-beige);
  }

  /* White background */
  .bg-white {
    background-color: var(--color-bg-white);
  }

  /* Orange background variant */
  .bg-orange {
    background-color: var(--color-accent);
    color: var(--color-text-inverted);
  }

  .bg-orange .split-content__subtitle {
    color: var(--color-text-inverted);
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .bg-orange .split-content__title {
    color: var(--color-text-inverted);
  }

  .bg-orange .split-content__content {
    color: rgba(255, 255, 255, 0.9);
  }

  .bg-orange .split-content__content :global(li::before) {
    color: var(--color-text-inverted);
  }

  .bg-orange .split-content__content :global(strong) {
    color: var(--color-text-inverted);
  }

  .bg-orange .split-content__content :global(a) {
    color: var(--color-text-inverted);
  }

  .bg-orange .split-content__image {
    box-shadow:
      0 0 30px rgba(0, 0, 0, 0.15),
      0 15px 50px -15px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .bg-orange .btn--primary {
    background-color: var(--color-text-inverted);
    color: var(--color-accent);
    border-color: rgba(255, 255, 255, 0.5);
    box-shadow:
      0 0 15px rgba(255, 255, 255, 0.3),
      8px 8px 40px rgba(0, 0, 0, 0.2),
      inset -5px -5px 10px rgba(255, 255, 255, 0.5);
  }

  .bg-orange .btn--primary:hover {
    background-color: rgba(255, 255, 255, 0.95);
    box-shadow:
      0 0 20px rgba(255, 255, 255, 0.5),
      12px 12px 50px rgba(0, 0, 0, 0.25),
      inset -5px -5px 10px rgba(255, 255, 255, 0.6);
  }

  .bg-orange .btn--secondary {
    color: var(--color-text-inverted);
    border-color: rgba(255, 255, 255, 0.4);
    background: rgba(255, 255, 255, 0.1);
  }

  .bg-orange .btn--secondary:hover {
    background-color: var(--color-text-inverted);
    color: var(--color-accent);
  }

  /* Green background variant */
  .bg-green {
    background-color: var(--color-primary);
    color: var(--color-text-inverted);
  }

  .bg-green .split-content__subtitle {
    color: var(--color-accent);
    background: rgba(255, 107, 48, 0.15);
    border-color: rgba(255, 107, 48, 0.25);
  }

  .bg-green .split-content__title {
    color: var(--color-text-inverted);
  }

  .bg-green .split-content__content {
    color: rgba(255, 255, 255, 0.9);
  }

  .bg-green .split-content__content :global(li::before) {
    color: var(--color-accent);
  }

  .bg-green .split-content__content :global(strong) {
    color: var(--color-text-inverted);
  }

  .bg-green .split-content__content :global(a) {
    color: var(--color-accent);
  }

  .bg-green .split-content__image {
    box-shadow:
      0 0 30px rgba(0, 0, 0, 0.2),
      0 15px 50px -15px rgba(0, 0, 0, 0.35),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .bg-green .btn--primary {
    background-color: var(--color-accent);
    color: var(--color-text-inverted);
    border-color: rgba(255, 255, 255, 0.25);
    box-shadow:
      0 0 15px hsla(17, 100%, 59%, 0.4),
      8px 8px 40px hsla(17, 100%, 59%, 0.3),
      inset -5px -5px 10px rgba(255, 255, 255, 0.15);
  }

  .bg-green .btn--primary:hover {
    background-color: var(--color-accent-600, #e55a20);
    box-shadow:
      0 0 20px hsla(17, 100%, 59%, 0.6),
      12px 12px 50px hsla(17, 100%, 59%, 0.5),
      inset -5px -5px 10px hsla(17, 100%, 80%, 0.2);
  }

  .bg-green .btn--secondary {
    color: var(--color-text-inverted);
    border-color: rgba(255, 255, 255, 0.4);
    background: rgba(255, 255, 255, 0.1);
  }

  .bg-green .btn--secondary:hover {
    background-color: var(--color-text-inverted);
    color: var(--color-primary);
  }

  /* ═══════════════════════════════════════════════════════════════
     DARK THEME SUPPORT
     ═══════════════════════════════════════════════════════════════ */
  @media (prefers-color-scheme: dark) {
    .split-content:not(.bg-orange):not(.bg-green) {
      background-color: var(--color-neutral-900);
      color: var(--color-text-inverted);
    }

    .split-content:not(.bg-orange):not(.bg-green) .split-content__title {
      color: var(--color-text-inverted);
    }

    .split-content:not(.bg-orange):not(.bg-green) .split-content__content {
      color: rgba(255, 255, 255, 0.8);
    }

    .split-content:not(.bg-orange):not(.bg-green) .split-content__image {
      box-shadow:
        0 0 30px rgba(255, 255, 255, 0.03),
        0 15px 50px -15px rgba(0, 0, 0, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }

    .split-content:not(.bg-orange):not(.bg-green) .btn--secondary {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 255, 255, 0.15);
      color: var(--color-text-inverted);
    }
  }

  /* ═══════════════════════════════════════════════════════════════
     RESPONSIVE - Mobile stacking with image first
     ═══════════════════════════════════════════════════════════════ */
  @media (max-width: 1023px) {
    /* On mobile, image always comes first regardless of layout setting */
    .split-content__image {
      order: -1;
    }

    .split-content__text {
      order: 1;
    }
  }

  @media (max-width: 640px) {
    .split-content__title {
      font-size: var(--text-xl);
    }

    .split-content__content {
      font-size: var(--text-base);
    }

    .split-content .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
