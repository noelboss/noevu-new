---
import type { TextContentSection, Theme } from '../../schemas/sections';

interface Props {
  data: TextContentSection;
  theme?: Theme;
}

const { data, theme } = Astro.props;
const { title, content, alignment = 'left', maxWidth = 'medium' } = data;

const alignmentClass = `text-content--${alignment}`;
const widthClass = `text-content--${maxWidth}`;
---

<section class={`text-content section ${alignmentClass} ${widthClass}`} data-theme={theme}>
  <div class="container">
    <div class="text-content__inner">
      {title && <h2 class="text-content__title">{title}</h2>}
      <div class="text-content__body" set:html={content} />
    </div>
  </div>
</section>

<style>
  .text-content {
    background-color: var(--theme-bg);
    color: var(--theme-text);
  }

  .text-content__inner {
    margin-inline: auto;
  }

  .text-content--narrow .text-content__inner {
    max-width: 600px;
  }

  .text-content--medium .text-content__inner {
    max-width: 800px;
  }

  .text-content--wide .text-content__inner {
    max-width: 1000px;
  }

  .text-content--center {
    text-align: center;
  }

  .text-content--right {
    text-align: right;
  }

  .text-content__title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-6);
    color: var(--theme-heading);
  }

  .text-content__body {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--theme-text-muted);
  }

  .text-content__body :global(h3) {
    font-size: var(--text-xl);
    color: var(--theme-heading);
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
  }

  .text-content__body :global(p) {
    margin-bottom: var(--space-4);
  }

  .text-content__body :global(a) {
    color: var(--theme-accent);
    text-decoration: underline;
  }

  .text-content__body :global(ul),
  .text-content__body :global(ol) {
    margin-bottom: var(--space-4);
    padding-left: var(--space-6);
  }

  .text-content__body :global(li) {
    margin-bottom: var(--space-2);
  }

  .text-content__body :global(blockquote) {
    margin-block: var(--space-6);
    padding-left: var(--space-6);
    border-left: 4px solid var(--theme-accent);
    font-style: italic;
    color: var(--theme-text);
  }

  .text-content__body :global(code) {
    font-family: ui-monospace, monospace;
    font-size: 0.875em;
    background-color: var(--theme-bg-alt);
    padding: 0.125em 0.375em;
    border-radius: var(--radius-sm);
  }
</style>
