---
import type { TextContentSection, Theme } from '../../schemas/sections';

interface Props {
  data: TextContentSection;
  theme?: Theme;
  id?: string;
}

const { data, theme, id } = Astro.props;
const { title, content, alignment = 'left', maxWidth = 'medium' } = data;

const alignmentClass = `text-content--${alignment}`;
const widthClass = `text-content--${maxWidth}`;
---

<section
  class={`text-content section ${alignmentClass} ${widthClass}`}
  data-theme={theme}
  id={id}
>
  <div class="container">
    <div class="text-content__inner">
      {title && <h2 class="text-content__title">{title}</h2>}
      <div class="text-content__body" set:html={content} />
    </div>
  </div>
</section>

<style>
  /* ═══════════════════════════════════════════════════════════════
     TEXT CONTENT SECTION
     Flexible text block for body content, legal pages, articles
     ═══════════════════════════════════════════════════════════════ */
  .text-content {
    background-color: var(--theme-bg, var(--color-bg-beige));
    color: var(--theme-text, var(--color-text));
    scroll-margin-top: 5rem; /* Anchor offset for fixed header */
  }

  .text-content__inner {
    margin-inline: auto;
  }

  /* ═══════════════════════════════════════════════════════════════
     WIDTH VARIANTS
     ═══════════════════════════════════════════════════════════════ */
  .text-content--narrow .text-content__inner {
    max-width: 600px;
  }

  .text-content--medium .text-content__inner {
    max-width: 800px;
  }

  .text-content--wide .text-content__inner {
    max-width: 1000px;
  }

  /* ═══════════════════════════════════════════════════════════════
     ALIGNMENT VARIANTS
     ═══════════════════════════════════════════════════════════════ */
  .text-content--left {
    text-align: left;
  }

  .text-content--center {
    text-align: center;
  }

  .text-content--center .text-content__inner {
    margin-inline: auto;
  }

  .text-content--right {
    text-align: right;
  }

  /* ═══════════════════════════════════════════════════════════════
     TITLE - Abril Fatface display font
     ═══════════════════════════════════════════════════════════════ */
  .text-content__title {
    font-family: var(--font-display, 'Abril Fatface', serif);
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: var(--font-normal);
    line-height: 1.2;
    margin-bottom: var(--space-8);
    color: var(--theme-heading, var(--color-text));
  }

  /* ═══════════════════════════════════════════════════════════════
     BODY CONTENT - Heebo body font with proper line height
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body {
    font-family: var(--font-sans);
    font-size: 1.0625rem;
    line-height: 1.75;
    color: var(--theme-text-muted, var(--color-text-muted));
  }

  .text-content__body :global(p) {
    margin-bottom: 1.5rem;
  }

  .text-content__body :global(p:last-child) {
    margin-bottom: 0;
  }

  /* Subtitle styling for <strong> or lead paragraphs */
  .text-content__body :global(p:first-child strong),
  .text-content__body :global(.lead) {
    font-size: 1.125rem;
    font-weight: var(--font-medium);
    color: var(--theme-text, var(--color-text));
    display: block;
    margin-bottom: 1.5rem;
  }

  /* ═══════════════════════════════════════════════════════════════
     HEADINGS WITHIN BODY
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(h2) {
    font-family: var(--font-display, 'Abril Fatface', serif);
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: var(--font-normal);
    color: var(--theme-heading, var(--color-text));
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.25;
  }

  .text-content__body :global(h3) {
    font-family: var(--font-display, 'Abril Fatface', serif);
    font-size: clamp(1.375rem, 2.5vw, 1.75rem);
    font-weight: var(--font-normal);
    color: var(--theme-heading, var(--color-text));
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .text-content__body :global(h4) {
    font-family: var(--font-sans);
    font-size: 1.125rem;
    font-weight: var(--font-semibold);
    color: var(--theme-heading, var(--color-text));
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }

  /* ═══════════════════════════════════════════════════════════════
     LINKS
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(a) {
    color: var(--theme-link, var(--color-primary));
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-thickness: 1px;
    transition: color var(--transition-fast), text-decoration-color var(--transition-fast);
  }

  .text-content__body :global(a:hover) {
    color: var(--theme-link-hover, var(--color-primary-700));
    text-decoration-color: currentColor;
  }

  /* ═══════════════════════════════════════════════════════════════
     LISTS
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(ul),
  .text-content__body :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .text-content__body :global(ul) {
    list-style-type: disc;
  }

  .text-content__body :global(ol) {
    list-style-type: decimal;
  }

  .text-content__body :global(li) {
    margin-bottom: 0.5rem;
    padding-left: 0.5rem;
  }

  .text-content__body :global(li::marker) {
    color: var(--theme-accent, var(--color-primary));
  }

  .text-content__body :global(li:last-child) {
    margin-bottom: 0;
  }

  /* Nested lists */
  .text-content__body :global(ul ul),
  .text-content__body :global(ol ol),
  .text-content__body :global(ul ol),
  .text-content__body :global(ol ul) {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  /* ═══════════════════════════════════════════════════════════════
     BLOCKQUOTES
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(blockquote) {
    margin-block: 2rem;
    padding: 1.5rem 2rem;
    padding-left: 2rem;
    border-left: 4px solid var(--theme-accent, var(--color-accent));
    background-color: var(--theme-bg-subtle, var(--color-bg-cream));
    border-radius: 0 var(--radius-md) var(--radius-md) 0;
    font-style: italic;
    color: var(--theme-text, var(--color-text));
  }

  .text-content__body :global(blockquote p) {
    margin-bottom: 0;
  }

  /* ═══════════════════════════════════════════════════════════════
     CODE
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(code) {
    font-family: ui-monospace, 'SF Mono', Monaco, 'Andale Mono', monospace;
    font-size: 0.875em;
    background-color: var(--theme-bg-subtle, var(--color-bg-cream));
    padding: 0.2em 0.4em;
    border-radius: var(--radius-sm);
    color: var(--theme-text, var(--color-text));
  }

  .text-content__body :global(pre) {
    margin-block: 1.5rem;
    padding: 1.25rem;
    background-color: var(--theme-bg-subtle, var(--color-neutral-900));
    border-radius: var(--radius-md);
    overflow-x: auto;
  }

  .text-content__body :global(pre code) {
    background: none;
    padding: 0;
    font-size: 0.875rem;
    line-height: 1.6;
  }

  /* ═══════════════════════════════════════════════════════════════
     TABLES
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(table) {
    width: 100%;
    margin-block: 1.5rem;
    border-collapse: collapse;
    font-size: 0.9375rem;
  }

  .text-content__body :global(th),
  .text-content__body :global(td) {
    padding: 0.75rem 1rem;
    text-align: left;
    border-bottom: 1px solid var(--theme-border, var(--color-neutral-200));
  }

  .text-content__body :global(th) {
    font-weight: var(--font-semibold);
    color: var(--theme-heading, var(--color-text));
    background-color: var(--theme-bg-subtle, var(--color-bg-cream));
  }

  /* ═══════════════════════════════════════════════════════════════
     HORIZONTAL RULES
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(hr) {
    margin-block: 2.5rem;
    border: none;
    border-top: 1px solid var(--theme-border, var(--color-neutral-200));
  }

  /* ═══════════════════════════════════════════════════════════════
     IMAGES WITHIN CONTENT
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    margin-block: 1.5rem;
  }

  .text-content__body :global(figure) {
    margin-block: 2rem;
  }

  .text-content__body :global(figcaption) {
    margin-top: 0.75rem;
    font-size: 0.875rem;
    color: var(--theme-text-muted, var(--color-text-muted));
    text-align: center;
  }

  /* ═══════════════════════════════════════════════════════════════
     RESPONSIVE
     ═══════════════════════════════════════════════════════════════ */
  @media (max-width: 640px) {
    .text-content__body {
      font-size: 1rem;
      line-height: 1.7;
    }

    .text-content__body :global(blockquote) {
      padding: 1rem 1.25rem;
      margin-inline: 0;
    }
  }
</style>
