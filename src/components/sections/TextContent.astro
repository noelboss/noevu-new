---
import type { TextContentSection, Theme } from '../../schemas/sections';
import { parseInlineMarkdown } from '../../utils/markdown';

interface Props {
  data: TextContentSection;
  theme?: Theme;
  id?: string;
}

const { data, theme, id } = Astro.props;
const { title, content, alignment = 'left', maxWidth = 'medium' } = data;

const alignmentClass = `text-content--${alignment}`;
const widthClass = `text-content--${maxWidth}`;
const parsedTitle = parseInlineMarkdown(title);
const parsedContent = parseInlineMarkdown(content);
---

<section
  class={`text-content section ${alignmentClass} ${widthClass}`}
  data-theme={theme}
  id={id}
>
  <div class="container">
    <div class="text-content__inner">
      {parsedTitle && <h2 class="text-content__title" set:html={parsedTitle} />}
      <div class="text-content__body" set:html={parsedContent} />
    </div>
  </div>
</section>

<style>
  /* ═══════════════════════════════════════════════════════════════
     TEXT CONTENT SECTION
     Flexible text block for body content, legal pages, articles
     ═══════════════════════════════════════════════════════════════ */
  .text-content {
    background-color: var(--theme-bg, var(--color-bg-beige));
    color: var(--theme-text, var(--color-text));
    scroll-margin-top: 5rem; /* Anchor offset for fixed header */
    position: relative;
    overflow: hidden;
  }

  .text-content__inner {
    margin-inline: auto;
  }

  /* ═══════════════════════════════════════════════════════════════
     WIDTH VARIANTS
     ═══════════════════════════════════════════════════════════════ */
  .text-content--narrow .text-content__inner {
    max-width: 600px;
  }

  .text-content--medium .text-content__inner {
    max-width: 800px;
  }

  .text-content--wide .text-content__inner {
    max-width: 1000px;
  }

  /* ═══════════════════════════════════════════════════════════════
     ALIGNMENT VARIANTS
     ═══════════════════════════════════════════════════════════════ */
  .text-content--left {
    text-align: left;
  }

  .text-content--center {
    text-align: center;
  }

  .text-content--center .text-content__inner {
    margin-inline: auto;
  }

  .text-content--right {
    text-align: right;
  }

  /* ═══════════════════════════════════════════════════════════════
     TITLE - Abril Fatface display font
     ═══════════════════════════════════════════════════════════════ */
  .text-content__title {
    font-family: var(--font-display, 'Abril Fatface', serif);
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: var(--font-normal);
    line-height: 1.2;
    margin-bottom: var(--space-8);
    color: var(--theme-heading, var(--color-text));
  }

  /* ═══════════════════════════════════════════════════════════════
     BODY CONTENT - Heebo body font with proper line height
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body {
    font-family: var(--font-sans);
    font-size: 1.0625rem;
    line-height: 1.75;
    color: var(--theme-text-muted, var(--color-text-muted));
  }

  .text-content__body :global(p) {
    margin-bottom: 1.5rem;
  }

  .text-content__body :global(p:last-child) {
    margin-bottom: 0;
  }

  /* Subtitle styling for <strong> or lead paragraphs */
  .text-content__body :global(p:first-child strong),
  .text-content__body :global(.lead) {
    font-size: 1.125rem;
    font-weight: var(--font-medium);
    color: var(--theme-text, var(--color-text));
    display: block;
    margin-bottom: 1.5rem;
  }

  /* ═══════════════════════════════════════════════════════════════
     HEADINGS WITHIN BODY
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(h2) {
    font-family: var(--font-display, 'Abril Fatface', serif);
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: var(--font-normal);
    color: var(--theme-heading, var(--color-text));
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.25;
  }

  .text-content__body :global(h3) {
    font-family: var(--font-display, 'Abril Fatface', serif);
    font-size: clamp(1.375rem, 2.5vw, 1.75rem);
    font-weight: var(--font-normal);
    color: var(--theme-heading, var(--color-text));
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .text-content__body :global(h4) {
    font-family: var(--font-sans);
    font-size: 1.125rem;
    font-weight: var(--font-semibold);
    color: var(--theme-heading, var(--color-text));
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }

  /* ═══════════════════════════════════════════════════════════════
     LINKS - With hover transitions
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(a) {
    color: var(--theme-link, var(--color-primary));
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-thickness: 1px;
    transition: all 0.2s ease;
  }

  .text-content__body :global(a:hover) {
    color: var(--theme-link-hover, var(--color-accent));
    text-decoration-color: currentColor;
    text-decoration-thickness: 2px;
  }

  /* ═══════════════════════════════════════════════════════════════
     LISTS - With hover transitions on items
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(ul),
  .text-content__body :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .text-content__body :global(ul) {
    list-style-type: disc;
  }

  .text-content__body :global(ol) {
    list-style-type: decimal;
  }

  .text-content__body :global(li) {
    margin-bottom: 0.5rem;
    padding-left: 0.5rem;
    transition: transform 0.2s ease;
  }

  .text-content__body :global(li:hover) {
    transform: translateX(4px);
  }

  .text-content__body :global(li::marker) {
    color: var(--theme-accent, var(--color-accent));
  }

  .text-content__body :global(li:last-child) {
    margin-bottom: 0;
  }

  /* Nested lists */
  .text-content__body :global(ul ul),
  .text-content__body :global(ol ol),
  .text-content__body :global(ul ol),
  .text-content__body :global(ol ul) {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  /* ═══════════════════════════════════════════════════════════════
     BLOCKQUOTES - Glass effect with 3-layer shadow
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(blockquote) {
    margin-block: 2rem;
    padding: 1.5rem 2rem;
    padding-left: 2rem;
    border-left: 4px solid var(--theme-accent, var(--color-accent));
    background: linear-gradient(
      135deg,
      rgba(255, 107, 48, 0.08) 0%,
      rgba(255, 107, 48, 0.03) 100%
    );
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: 0 var(--radius-lg) var(--radius-lg) 0;
    font-style: italic;
    color: var(--theme-text, var(--color-text));
    /* 3-layer shadow */
    box-shadow:
      0 0 15px rgba(255, 107, 48, 0.08),
      0 4px 20px rgba(0, 0, 0, 0.05),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
  }

  .text-content__body :global(blockquote:hover) {
    box-shadow:
      0 0 20px rgba(255, 107, 48, 0.12),
      0 8px 30px rgba(0, 0, 0, 0.08),
      inset 0 1px 0 rgba(255, 255, 255, 0.4);
    transform: translateX(4px);
  }

  .text-content__body :global(blockquote p) {
    margin-bottom: 0;
  }

  /* ═══════════════════════════════════════════════════════════════
     CODE - Glass effect styling
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(code) {
    font-family: ui-monospace, 'SF Mono', Monaco, 'Andale Mono', monospace;
    font-size: 0.875em;
    background: linear-gradient(
      135deg,
      rgba(37, 90, 78, 0.1) 0%,
      rgba(37, 90, 78, 0.05) 100%
    );
    padding: 0.2em 0.5em;
    border-radius: var(--radius-sm);
    color: var(--color-primary);
    border: 1px solid rgba(37, 90, 78, 0.15);
  }

  .text-content__body :global(pre) {
    margin-block: 1.5rem;
    padding: 1.25rem;
    background: linear-gradient(
      135deg,
      var(--color-neutral-900) 0%,
      var(--color-neutral-800, #3a3a3a) 100%
    );
    border-radius: var(--radius-lg);
    overflow-x: auto;
    border: 1px solid rgba(255, 255, 255, 0.1);
    /* 3-layer shadow */
    box-shadow:
      0 0 20px rgba(0, 0, 0, 0.1),
      0 8px 32px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
  }

  .text-content__body :global(pre code) {
    background: none;
    padding: 0;
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--color-text-inverted);
    border: none;
  }

  /* ═══════════════════════════════════════════════════════════════
     TABLES - Glass effect with hover
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(table) {
    width: 100%;
    margin-block: 1.5rem;
    border-collapse: separate;
    border-spacing: 0;
    font-size: 0.9375rem;
    border-radius: var(--radius-lg);
    overflow: hidden;
    /* 3-layer shadow */
    box-shadow:
      0 0 15px rgba(0, 0, 0, 0.03),
      0 4px 20px rgba(0, 0, 0, 0.06),
      inset 0 1px 0 rgba(255, 255, 255, 0.5);
  }

  .text-content__body :global(th),
  .text-content__body :global(td) {
    padding: 0.875rem 1.25rem;
    text-align: left;
    border-bottom: 1px solid var(--theme-border, rgba(0, 0, 0, 0.08));
    transition: background-color 0.2s ease;
  }

  .text-content__body :global(th) {
    font-weight: var(--font-semibold);
    color: var(--theme-heading, var(--color-text));
    background: linear-gradient(
      135deg,
      rgba(37, 90, 78, 0.08) 0%,
      rgba(37, 90, 78, 0.04) 100%
    );
  }

  .text-content__body :global(tr:hover td) {
    background-color: rgba(37, 90, 78, 0.03);
  }

  .text-content__body :global(tr:last-child td) {
    border-bottom: none;
  }

  /* ═══════════════════════════════════════════════════════════════
     HORIZONTAL RULES - Gradient style
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(hr) {
    margin-block: 2.5rem;
    border: none;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      var(--theme-border, var(--color-neutral-200)) 20%,
      var(--theme-border, var(--color-neutral-200)) 80%,
      transparent 100%
    );
  }

  /* ═══════════════════════════════════════════════════════════════
     IMAGES WITHIN CONTENT - 3-layer shadow and hover
     ═══════════════════════════════════════════════════════════════ */
  .text-content__body :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-xl);
    margin-block: 1.5rem;
    /* 3-layer shadow */
    box-shadow:
      0 0 20px rgba(37, 90, 78, 0.06),
      0 10px 40px -10px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .text-content__body :global(img:hover) {
    box-shadow:
      0 0 30px rgba(37, 90, 78, 0.1),
      0 15px 50px -10px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
    transform: translateY(-4px);
  }

  .text-content__body :global(figure) {
    margin-block: 2rem;
  }

  .text-content__body :global(figcaption) {
    margin-top: 0.75rem;
    font-size: 0.875rem;
    color: var(--theme-text-muted, var(--color-text-muted));
    text-align: center;
    font-style: italic;
  }

  /* ═══════════════════════════════════════════════════════════════
     DARK THEME SUPPORT
     ═══════════════════════════════════════════════════════════════ */
  @media (prefers-color-scheme: dark) {
    .text-content {
      background-color: var(--color-neutral-900);
      color: var(--color-text-inverted);
    }

    .text-content__title {
      color: var(--color-text-inverted);
    }

    .text-content__body {
      color: rgba(255, 255, 255, 0.8);
    }

    .text-content__body :global(h2),
    .text-content__body :global(h3),
    .text-content__body :global(h4) {
      color: var(--color-text-inverted);
    }

    .text-content__body :global(a) {
      color: var(--color-accent);
    }

    .text-content__body :global(a:hover) {
      color: var(--color-accent-400, #ff8a5c);
    }

    .text-content__body :global(blockquote) {
      background: linear-gradient(
        135deg,
        rgba(255, 107, 48, 0.12) 0%,
        rgba(255, 107, 48, 0.05) 100%
      );
    }

    .text-content__body :global(code) {
      background: linear-gradient(
        135deg,
        rgba(255, 255, 255, 0.1) 0%,
        rgba(255, 255, 255, 0.05) 100%
      );
      color: var(--color-accent);
      border-color: rgba(255, 255, 255, 0.1);
    }

    .text-content__body :global(th) {
      background: linear-gradient(
        135deg,
        rgba(255, 255, 255, 0.08) 0%,
        rgba(255, 255, 255, 0.03) 100%
      );
      color: var(--color-text-inverted);
    }

    .text-content__body :global(th),
    .text-content__body :global(td) {
      border-bottom-color: rgba(255, 255, 255, 0.1);
    }

    .text-content__body :global(tr:hover td) {
      background-color: rgba(255, 255, 255, 0.03);
    }

    .text-content__body :global(table) {
      box-shadow:
        0 0 15px rgba(0, 0, 0, 0.2),
        0 4px 20px rgba(0, 0, 0, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }

    .text-content__body :global(img) {
      box-shadow:
        0 0 20px rgba(0, 0, 0, 0.2),
        0 10px 40px -10px rgba(0, 0, 0, 0.4),
        inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }

    .text-content__body :global(hr) {
      background: linear-gradient(
        90deg,
        transparent 0%,
        rgba(255, 255, 255, 0.15) 20%,
        rgba(255, 255, 255, 0.15) 80%,
        transparent 100%
      );
    }
  }

  /* ═══════════════════════════════════════════════════════════════
     RESPONSIVE
     ═══════════════════════════════════════════════════════════════ */
  @media (max-width: 640px) {
    .text-content__body {
      font-size: 1rem;
      line-height: 1.7;
    }

    .text-content__body :global(blockquote) {
      padding: 1rem 1.25rem;
      margin-inline: 0;
    }

    .text-content__body :global(table) {
      font-size: 0.875rem;
    }

    .text-content__body :global(th),
    .text-content__body :global(td) {
      padding: 0.625rem 0.875rem;
    }
  }
</style>
