---
import type { LogoGallerySection, Theme } from '../../schemas/sections';

interface Props {
  data: LogoGallerySection;
  theme?: Theme;
}

const { data, theme } = Astro.props;
const { title, logos } = data;
---

<section class="logo-gallery section--sm" data-theme={theme}>
  {title && (
    <div class="container">
      <p class="logo-gallery__title">{title}</p>
    </div>
  )}
  <div class="logo-gallery__wrapper">
    <div class="logo-gallery__track">
      {/* First set of logos */}
      {logos.map((logo) => (
        <div class="logo-gallery__item">
          {logo.href ? (
            <a href={logo.href} target="_blank" rel="noopener noreferrer" aria-label={logo.name}>
              <img
                src={logo.image.src}
                alt={logo.image.alt || logo.name}
                loading="lazy"
                class="logo-gallery__logo"
              />
            </a>
          ) : (
            <img
              src={logo.image.src}
              alt={logo.image.alt || logo.name}
              loading="lazy"
              class="logo-gallery__logo"
            />
          )}
        </div>
      ))}
      {/* Duplicate set for seamless infinite scroll */}
      {logos.map((logo) => (
        <div class="logo-gallery__item" aria-hidden="true">
          {logo.href ? (
            <a href={logo.href} target="_blank" rel="noopener noreferrer" tabindex="-1">
              <img
                src={logo.image.src}
                alt=""
                loading="lazy"
                class="logo-gallery__logo"
              />
            </a>
          ) : (
            <img
              src={logo.image.src}
              alt=""
              loading="lazy"
              class="logo-gallery__logo"
            />
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .logo-gallery {
    background-color: var(--theme-bg);
    overflow: hidden;
    padding-block: var(--space-12);
  }

  .logo-gallery__title {
    text-align: center;
    font-size: var(--text-sm);
    color: var(--theme-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-8);
    font-weight: var(--font-medium);
  }

  .logo-gallery__wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    /* Gradient mask for smooth fade on edges */
    mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 10%,
      black 90%,
      transparent 100%
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 10%,
      black 90%,
      transparent 100%
    );
  }

  .logo-gallery__track {
    display: flex;
    align-items: center;
    width: max-content;
    animation: logo-marquee 40s linear infinite;
    will-change: transform;
  }

  /* Pause animation on hover for better UX */
  .logo-gallery__wrapper:hover .logo-gallery__track {
    animation-play-state: paused;
  }

  .logo-gallery__item {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 var(--space-8);
  }

  .logo-gallery__item a {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-gallery__logo {
    height: 1.75rem;
    width: auto;
    max-width: 140px;
    object-fit: contain;
    opacity: 0.7;
    filter: grayscale(100%);
    transition:
      opacity 0.3s ease,
      filter 0.3s ease,
      transform 0.3s ease;
  }

  .logo-gallery__item:hover .logo-gallery__logo,
  .logo-gallery__item a:hover .logo-gallery__logo,
  .logo-gallery__item a:focus .logo-gallery__logo {
    opacity: 1;
    filter: grayscale(0%);
    transform: scale(1.05);
  }

  /* Smooth infinite marquee animation */
  @keyframes logo-marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Responsive adjustments */
  @media (min-width: 640px) {
    .logo-gallery__item {
      padding: 0 var(--space-10);
    }

    .logo-gallery__logo {
      height: 2rem;
      max-width: 160px;
    }
  }

  @media (min-width: 768px) {
    .logo-gallery {
      padding-block: var(--space-16);
    }

    .logo-gallery__wrapper {
      mask-image: linear-gradient(
        to right,
        transparent 0%,
        black 8%,
        black 92%,
        transparent 100%
      );
      -webkit-mask-image: linear-gradient(
        to right,
        transparent 0%,
        black 8%,
        black 92%,
        transparent 100%
      );
    }

    .logo-gallery__item {
      padding: 0 var(--space-12);
    }

    .logo-gallery__logo {
      height: 2.25rem;
      max-width: 180px;
    }
  }

  @media (min-width: 1024px) {
    .logo-gallery__wrapper {
      mask-image: linear-gradient(
        to right,
        transparent 0%,
        black 5%,
        black 95%,
        transparent 100%
      );
      -webkit-mask-image: linear-gradient(
        to right,
        transparent 0%,
        black 5%,
        black 95%,
        transparent 100%
      );
    }

    .logo-gallery__item {
      padding: 0 var(--space-16);
    }

    .logo-gallery__logo {
      height: 2.5rem;
      max-width: 200px;
    }
  }

  @media (min-width: 1280px) {
    .logo-gallery__track {
      animation-duration: 50s;
    }

    .logo-gallery__logo {
      height: 2.75rem;
      max-width: 220px;
    }
  }

  /* Reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .logo-gallery__track {
      animation: none;
      justify-content: center;
      flex-wrap: wrap;
      width: 100%;
      gap: var(--space-8);
      padding: 0 var(--space-8);
    }

    .logo-gallery__item[aria-hidden="true"] {
      display: none;
    }

    .logo-gallery__wrapper {
      mask-image: none;
      -webkit-mask-image: none;
    }

    .logo-gallery__item {
      padding: var(--space-4);
    }
  }
</style>
