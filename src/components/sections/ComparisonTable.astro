---
import type { ComparisonTableSection, Theme } from '../../schemas/sections';

interface Props {
  data: ComparisonTableSection;
  theme?: Theme;
}

const { data, theme } = Astro.props;
const { title, leftColumn, rightColumn } = data;
---

<section class="comparison section" data-theme={theme}>
  <div class="container">
    {title && <h2 class="comparison__title">{title}</h2>}

    <div class="comparison__grid">
      <div class={`comparison__column ${leftColumn.highlighted ? 'comparison__column--highlighted' : ''}`}>
        <h3 class="comparison__header">{leftColumn.header}</h3>
        <ul class="comparison__list">
          {leftColumn.items.map((item) => (
            <li class="comparison__item">
              <svg class="comparison__icon" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                {leftColumn.highlighted ? (
                  <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                ) : (
                  <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" />
                )}
              </svg>
              {item}
            </li>
          ))}
        </ul>
      </div>

      <div class={`comparison__column ${rightColumn.highlighted ? 'comparison__column--highlighted' : ''}`}>
        <h3 class="comparison__header">{rightColumn.header}</h3>
        <ul class="comparison__list">
          {rightColumn.items.map((item) => (
            <li class="comparison__item">
              <svg class="comparison__icon" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                {rightColumn.highlighted ? (
                  <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                ) : (
                  <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" />
                )}
              </svg>
              {item}
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>

<style>
  .comparison {
    background-color: var(--color-bg-beige);
  }

  /* When theme is applied, use theme variables */
  .comparison[data-theme] {
    background-color: var(--theme-bg);
    color: var(--theme-text);
  }

  .comparison__title {
    text-align: center;
    font-size: var(--text-3xl);
    margin-bottom: var(--space-12);
  }

  .comparison[data-theme] .comparison__title {
    color: var(--theme-heading);
  }

  @media (min-width: 768px) {
    .comparison__title {
      font-size: var(--text-4xl);
    }
  }

  .comparison__grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    max-width: 900px;
    margin-inline: auto;
  }

  @media (min-width: 768px) {
    .comparison__grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 0;
      border-radius: var(--radius-lg);
      overflow: hidden;
      box-shadow: var(--shadow-card);
    }
  }

  .comparison__column {
    background-color: var(--color-bg-white);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
  }

  .comparison[data-theme] .comparison__column {
    background-color: var(--theme-card-bg);
  }

  @media (min-width: 768px) {
    .comparison__column {
      border-radius: 0;
      padding: var(--space-8);
    }
  }

  .comparison__column--highlighted {
    background-color: var(--color-accent);
    color: var(--color-text-inverted);
  }

  .comparison[data-theme] .comparison__column--highlighted {
    background-color: var(--theme-accent, var(--color-accent));
    color: var(--color-text-inverted);
  }

  @media (min-width: 768px) {
    .comparison__column--highlighted {
      border-radius: var(--radius-lg);
      position: relative;
      z-index: 1;
      margin: calc(-1 * var(--space-3)) 0;
      padding-block: calc(var(--space-8) + var(--space-3));
      box-shadow: var(--shadow-lg);
    }
  }

  .comparison__header {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--color-neutral-200);
  }

  .comparison[data-theme] .comparison__header {
    color: var(--theme-heading);
    border-bottom-color: var(--theme-border);
  }

  .comparison__column--highlighted .comparison__header {
    color: var(--color-text-inverted);
    border-bottom-color: rgba(255, 255, 255, 0.3);
  }

  .comparison__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .comparison__item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
  }

  .comparison__icon {
    flex-shrink: 0;
    width: 1.25rem;
    height: 1.25rem;
    margin-top: 0.125rem;
  }

  .comparison__column--highlighted .comparison__icon {
    color: var(--color-primary);
  }

  .comparison[data-theme] .comparison__column--highlighted .comparison__icon {
    color: var(--color-primary);
  }

  .comparison__column:not(.comparison__column--highlighted) .comparison__icon {
    color: var(--color-neutral-400);
  }

  .comparison[data-theme] .comparison__column:not(.comparison__column--highlighted) .comparison__icon {
    color: var(--theme-text-muted, var(--color-neutral-400));
  }

  /* Mobile horizontal scroll layout */
  @media (max-width: 767px) {
    .comparison__grid {
      flex-direction: row;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      padding-bottom: var(--space-4);
    }

    .comparison__column {
      flex: 0 0 85%;
      scroll-snap-align: start;
    }
  }
</style>
