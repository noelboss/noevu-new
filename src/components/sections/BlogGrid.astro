---
import type { BlogGridSection } from '../../schemas/sections';
import BlogCard from '../blog/BlogCard.astro';

interface Props {
  data: BlogGridSection;
  posts?: Array<{
    title: string;
    slug: string;
    excerpt: string;
    featuredImage?: string;
    categories?: string[];
    publishedAt: string;
    author?: {
      name: string;
      image?: string;
    };
  }>;
}

const { data, posts = [] } = Astro.props;
const { title, subtitle, limit = 6, showCategories = true } = data;

// Use provided posts or limit them
const displayPosts = posts.slice(0, limit);
---

<section class="blog-grid section">
  <div class="container">
    {(title || subtitle) && (
      <div class="blog-grid__header">
        {title && <h2 class="blog-grid__title">{title}</h2>}
        {subtitle && <p class="blog-grid__subtitle">{subtitle}</p>}
      </div>
    )}

    {displayPosts.length > 0 ? (
      <div class="blog-grid__grid">
        {displayPosts.map((post) => (
          <BlogCard
            title={post.title}
            slug={post.slug}
            excerpt={post.excerpt}
            featuredImage={post.featuredImage}
            categories={showCategories ? post.categories : undefined}
            publishedAt={post.publishedAt}
            author={post.author}
          />
        ))}
      </div>
    ) : (
      <p class="blog-grid__empty">Noch keine Blog-Beiträge vorhanden.</p>
    )}

    <div class="blog-grid__footer">
      <a href="/blog" class="btn btn--secondary">
        Alle Beiträge ansehen
      </a>
    </div>
  </div>
</section>

<style>
  .blog-grid {
    background-color: var(--color-bg-beige);
  }

  .blog-grid__header {
    text-align: center;
    max-width: 600px;
    margin-inline: auto;
    margin-bottom: var(--space-12);
  }

  .blog-grid__title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-4);
  }

  .blog-grid__subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
  }

  .blog-grid__grid {
    display: grid;
    gap: var(--space-8);
  }

  @media (min-width: 640px) {
    .blog-grid__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .blog-grid__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .blog-grid__empty {
    text-align: center;
    color: var(--color-text-muted);
    padding: var(--space-12);
  }

  .blog-grid__footer {
    text-align: center;
    margin-top: var(--space-12);
  }
</style>
