---
import type { BlogGridSection, Theme } from '../../schemas/sections';
import BlogCard from '../blog/BlogCard.astro';

interface Props {
  data: BlogGridSection;
  theme?: Theme;
  posts?: Array<{
    title: string;
    slug: string;
    excerpt: string;
    featuredImage?: string;
    categories?: string[];
    publishedAt: string;
    author?: {
      name: string;
      image?: string;
    };
  }>;
}

const { data, theme, posts = [] } = Astro.props;
const { title, subtitle, limit = 6, showCategories = true } = data;

// Use provided posts or limit them
const displayPosts = posts.slice(0, limit);
---

<section class="blog-grid section" data-theme={theme}>
  <div class="container">
    {(title || subtitle) && (
      <div class="blog-grid__header">
        {title && <h2 class="blog-grid__title">{title}</h2>}
        {subtitle && <p class="blog-grid__subtitle">{subtitle}</p>}
      </div>
    )}

    {displayPosts.length > 0 ? (
      <div class="blog-grid__grid">
        {displayPosts.map((post) => (
          <BlogCard
            title={post.title}
            slug={post.slug}
            excerpt={post.excerpt}
            featuredImage={post.featuredImage}
            categories={showCategories ? post.categories : undefined}
            publishedAt={post.publishedAt}
            author={post.author}
          />
        ))}
      </div>
    ) : (
      <p class="blog-grid__empty">Noch keine Blog-Beiträge vorhanden.</p>
    )}

    <div class="blog-grid__footer">
      <a href="/blog" class="btn btn--secondary">
        Alle Beiträge ansehen
      </a>
    </div>
  </div>
</section>

<style>
  /* Blog Grid Section - matching original noevu.ch design */
  .blog-grid {
    background-color: var(--color-bg-beige);
    position: relative;
  }

  /* Section Header */
  .blog-grid__header {
    text-align: center;
    max-width: 700px;
    margin-inline: auto;
    margin-bottom: var(--space-16);
  }

  .blog-grid__title {
    font-family: var(--font-heading);
    font-size: clamp(var(--text-3xl), 5vw, var(--text-5xl));
    font-weight: var(--font-normal);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-6);
    /* Gradient text effect matching original */
    background: linear-gradient(120deg, var(--color-primary) 0%, var(--color-neutral-700) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .blog-grid__subtitle {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
    max-width: 540px;
    margin-inline: auto;
  }

  /* Blog Grid Layout - 1 -> 2 -> 3 columns responsive */
  .blog-grid__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-8);
  }

  /* 2 columns on tablet */
  @media (min-width: 640px) {
    .blog-grid__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }
  }

  /* 3 columns on desktop */
  @media (min-width: 1024px) {
    .blog-grid__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-8);
    }
  }

  /* Empty state message */
  .blog-grid__empty {
    text-align: center;
    color: var(--color-text-muted);
    font-size: var(--text-lg);
    padding: var(--space-16) var(--space-8);
    /* Glass effect for empty state */
    background-color: hsla(var(--color-white-hsl), 0.5);
    border-radius: var(--radius-xl);
    backdrop-filter: blur(5px);
  }

  /* Footer with CTA button */
  .blog-grid__footer {
    text-align: center;
    margin-top: var(--space-16);
    padding-top: var(--space-8);
  }

  .blog-grid__footer .btn--secondary {
    /* Enhanced button styling */
    padding: var(--space-4) var(--space-8);
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    border-radius: var(--radius-lg);
    border-width: 2px;
    transition: all var(--transition-slow);
    /* Subtle shadow on button */
    box-shadow: 0 0 15px hsla(var(--color-white-hsl), 0.3),
                8px 8px 40px hsla(var(--color-green-hsl), 0.15);
  }

  .blog-grid__footer .btn--secondary:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 20px hsla(var(--color-white-hsl), 0.4),
                8px 8px 50px hsla(var(--color-green-hsl), 0.25);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .blog-grid__header {
      margin-bottom: var(--space-10);
    }

    .blog-grid__footer {
      margin-top: var(--space-10);
    }
  }
</style>
