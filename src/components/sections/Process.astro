---
import type { ProcessSection, Theme } from '../../schemas/sections';

interface Props {
  data: ProcessSection;
  theme?: Theme;
}

const { data, theme } = Astro.props;
const { title, subtitle, steps, layout = 'alternating' } = data;

const layoutClass = `process--${layout}`;
---

<section class={`process section ${layoutClass}`} data-theme={theme}>
  <div class="container">
    {(title || subtitle) && (
      <div class="process__header">
        {title && <h2 class="process__title">{title}</h2>}
        {subtitle && <p class="process__subtitle">{subtitle}</p>}
      </div>
    )}

    <div class="process__steps">
      {steps.map((step, index) => (
        <div class={`process__step ${index % 2 === 1 && layout === 'alternating' ? 'process__step--reverse' : ''}`}>
          <div class="process__content">
            <h3 class="process__step-title">{step.title}</h3>
            <div class="process__description" set:html={step.description} />
          </div>
          <div class="process__number">
            {step.number || index + 1}
          </div>
          {step.image && (
            <div class="process__image">
              <img
                src={step.image.src}
                alt={step.image.alt}
                loading="lazy"
              />
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* ============================================
     PROCESS / TIMELINE COMPONENT
     Matches original noevu.ch dynamic timeline
     ============================================ */

  .process {
    background-color: var(--theme-bg);
    color: var(--theme-text);
    position: relative;
    overflow: hidden;
  }

  /* Header */
  .process__header {
    text-align: center;
    max-width: 700px;
    margin-inline: auto;
    margin-bottom: var(--space-16);
  }

  .process__title {
    font-size: var(--text-4xl);
    color: var(--theme-heading);
    margin-bottom: var(--space-4);
  }

  .process__subtitle {
    font-size: var(--text-lg);
    color: var(--theme-text-muted);
    line-height: var(--leading-relaxed);
  }

  /* ============================================
     TIMELINE STRUCTURE
     ============================================ */

  .process__steps {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  /* Vertical connecting line - centered */
  .process__steps::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      var(--color-accent) 5%,
      var(--color-accent) 95%,
      transparent 100%
    );
    transform: translateX(-50%);
    z-index: 1;
  }

  /* ============================================
     INDIVIDUAL STEP
     ============================================ */

  .process__step {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 0;
    align-items: flex-start;
    position: relative;
    min-height: 200px;
  }

  /* Content area (left or right) */
  .process__content {
    padding: var(--space-8);
    opacity: 0.6;
    transition: opacity 0.5s ease-in-out;
  }

  .process__step:hover .process__content {
    opacity: 1;
  }

  /* Left side content (odd steps) */
  .process__step:nth-child(odd) .process__content {
    grid-column: 1;
    text-align: right;
    padding-right: var(--space-12);
  }

  /* Right side content (even steps) */
  .process__step:nth-child(even) .process__content {
    grid-column: 3;
    text-align: left;
    padding-left: var(--space-12);
  }

  /* ============================================
     TIMELINE NUMBER CIRCLE
     ============================================ */

  .process__number {
    grid-column: 2;
    grid-row: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3.5rem;
    height: 3.5rem;
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    font-weight: var(--font-normal);
    background-color: var(--color-accent);
    color: var(--color-text-inverted);
    border-radius: var(--radius-full);
    position: relative;
    z-index: 2;
    box-shadow:
      0 0 0 6px var(--theme-bg),
      0 0 20px hsla(var(--color-orange-hsl), 0.4);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .process__step:hover .process__number {
    transform: scale(1.1);
    box-shadow:
      0 0 0 8px var(--theme-bg),
      0 0 30px hsla(var(--color-orange-hsl), 0.6);
  }

  /* ============================================
     IMAGE AREA
     ============================================ */

  .process__image {
    padding: var(--space-4);
  }

  /* Images on right for odd steps */
  .process__step:nth-child(odd) .process__image {
    grid-column: 3;
    grid-row: 1;
    padding-left: var(--space-12);
  }

  /* Images on left for even steps */
  .process__step:nth-child(even) .process__image {
    grid-column: 1;
    grid-row: 1;
    padding-right: var(--space-12);
  }

  .process__image img {
    border-radius: var(--radius-xl);
    box-shadow:
      0 10px 40px -10px rgba(0, 0, 0, 0.15),
      0 0 0 1px rgba(0, 0, 0, 0.05);
    transition: transform 0.4s ease, box-shadow 0.4s ease;
    max-width: 100%;
    height: auto;
  }

  .process__step:hover .process__image img {
    transform: translateY(-4px);
    box-shadow:
      0 20px 50px -15px rgba(0, 0, 0, 0.2),
      0 0 0 1px rgba(0, 0, 0, 0.05);
  }

  /* ============================================
     STEP TITLE & DESCRIPTION
     ============================================ */

  .process__step-title {
    font-size: var(--text-2xl);
    color: var(--theme-heading);
    margin-bottom: var(--space-4);
    position: relative;
    display: inline-block;
  }

  /* Underline effect on title */
  .process__step-title::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(
      90deg,
      var(--color-accent) 0%,
      transparent 100%
    );
    transition: width 0.5s ease;
  }

  .process__step:nth-child(even) .process__step-title::after {
    left: auto;
    right: 0;
    background: linear-gradient(
      -90deg,
      var(--color-accent) 0%,
      transparent 100%
    );
  }

  .process__step:hover .process__step-title::after {
    width: 100%;
  }

  .process__description {
    font-size: var(--text-base);
    color: var(--theme-text-muted);
    line-height: var(--leading-relaxed);
    max-width: 400px;
  }

  .process__step:nth-child(odd) .process__description {
    margin-left: auto;
  }

  .process__step:nth-child(even) .process__description {
    margin-right: auto;
  }

  /* ============================================
     LAYOUT VARIANTS
     ============================================ */

  /* Vertical layout - all content on one side */
  .process--vertical .process__steps::before {
    left: 1.75rem;
  }

  .process--vertical .process__step {
    grid-template-columns: auto 1fr;
  }

  .process--vertical .process__step .process__content {
    grid-column: 2;
    text-align: left;
    padding-left: var(--space-8);
    padding-right: 0;
  }

  .process--vertical .process__step .process__image {
    grid-column: 2;
    grid-row: 2;
    padding-left: var(--space-8);
    padding-right: 0;
  }

  .process--vertical .process__number {
    grid-column: 1;
  }

  .process--vertical .process__description {
    margin-left: 0;
    margin-right: auto;
  }

  .process--vertical .process__step-title::after {
    left: 0;
    right: auto;
    background: linear-gradient(
      90deg,
      var(--color-accent) 0%,
      transparent 100%
    );
  }

  /* Horizontal layout */
  .process--horizontal .process__steps {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-8);
  }

  .process--horizontal .process__steps::before {
    display: none;
  }

  .process--horizontal .process__step {
    flex: 1 1 280px;
    max-width: 320px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    min-height: auto;
  }

  .process--horizontal .process__number {
    margin-bottom: var(--space-4);
  }

  .process--horizontal .process__content {
    padding: var(--space-4);
    text-align: center;
  }

  .process--horizontal .process__step .process__content {
    grid-column: auto;
    padding-left: 0;
    padding-right: 0;
  }

  .process--horizontal .process__step .process__image {
    grid-column: auto;
    grid-row: auto;
    padding: var(--space-4);
    order: -1;
  }

  .process--horizontal .process__description {
    margin-left: auto;
    margin-right: auto;
  }

  .process--horizontal .process__step-title::after {
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(
      90deg,
      transparent 0%,
      var(--color-accent) 50%,
      transparent 100%
    );
  }

  /* ============================================
     RESPONSIVE - MOBILE
     ============================================ */

  @media (max-width: 768px) {
    .process__title {
      font-size: var(--text-3xl);
    }

    /* Stack everything vertically on mobile */
    .process__steps::before {
      left: 1.75rem;
    }

    .process__step {
      grid-template-columns: auto 1fr;
      min-height: auto;
      gap: var(--space-2);
    }

    .process__number {
      width: 3rem;
      height: 3rem;
      font-size: var(--text-xl);
    }

    /* All content on the right of timeline on mobile */
    .process__step:nth-child(odd) .process__content,
    .process__step:nth-child(even) .process__content {
      grid-column: 2;
      grid-row: 1;
      text-align: left;
      padding-left: var(--space-6);
      padding-right: var(--space-4);
    }

    .process__step:nth-child(odd) .process__image,
    .process__step:nth-child(even) .process__image {
      grid-column: 2;
      grid-row: 2;
      padding-left: var(--space-6);
      padding-right: var(--space-4);
    }

    .process__step:nth-child(odd) .process__description,
    .process__step:nth-child(even) .process__description {
      margin-left: 0;
      margin-right: auto;
    }

    .process__step:nth-child(odd) .process__step-title::after,
    .process__step:nth-child(even) .process__step-title::after {
      left: 0;
      right: auto;
      background: linear-gradient(
        90deg,
        var(--color-accent) 0%,
        transparent 100%
      );
    }

    .process__step-title {
      font-size: var(--text-xl);
    }

    .process__description {
      font-size: var(--text-sm);
    }

    .process__content {
      opacity: 1;
    }

    /* Horizontal layout on mobile */
    .process--horizontal .process__steps {
      flex-direction: column;
      align-items: center;
    }

    .process--horizontal .process__step {
      max-width: 100%;
    }
  }

  /* ============================================
     DARK THEME ADJUSTMENTS
     ============================================ */

  [data-theme="dark"] .process__steps::before,
  [data-theme="dark-bold"] .process__steps::before,
  [data-theme="black"] .process__steps::before,
  [data-theme="black-bold"] .process__steps::before {
    background: linear-gradient(
      to bottom,
      transparent 0%,
      var(--color-accent) 5%,
      var(--color-accent) 95%,
      transparent 100%
    );
  }

  [data-theme="dark"] .process__number,
  [data-theme="dark-bold"] .process__number,
  [data-theme="black"] .process__number,
  [data-theme="black-bold"] .process__number {
    box-shadow:
      0 0 0 6px var(--theme-bg),
      0 0 25px hsla(var(--color-orange-hsl), 0.5);
  }

  [data-theme="dark"] .process__image img,
  [data-theme="dark-bold"] .process__image img,
  [data-theme="black"] .process__image img,
  [data-theme="black-bold"] .process__image img {
    box-shadow:
      0 10px 40px -10px rgba(0, 0, 0, 0.4),
      0 0 0 1px rgba(255, 255, 255, 0.1);
  }
</style>
