---
import type { SocialResponsibilitySection, Theme } from '../../schemas/sections';

interface Props {
  data: SocialResponsibilitySection;
  theme?: Theme;
}

const { data, theme } = Astro.props;
const { eyebrow, title, description, image, cta } = data;
---

<section class="social-responsibility section" data-theme={theme}>
  <div class="social-responsibility__container container">
    <div class="social-responsibility__image">
      <img
        src={image.src}
        alt={image.alt}
        width={image.width}
        height={image.height}
        loading="lazy"
      />
    </div>

    <div class="social-responsibility__content">
      {eyebrow && <p class="social-responsibility__eyebrow">{eyebrow}</p>}
      <h2 class="social-responsibility__title">{title}</h2>
      <div class="social-responsibility__description" set:html={description} />
      {cta && (
        <a
          href={cta.href}
          class={`btn btn--${cta.variant || 'primary'}`}
          target={cta.external ? '_blank' : undefined}
          rel={cta.external ? 'noopener noreferrer' : undefined}
        >
          {cta.label}
        </a>
      )}
    </div>
  </div>
</section>

<style>
  .social-responsibility {
    background-color: var(--theme-bg);
    color: var(--theme-text);
  }

  .social-responsibility__container {
    display: grid;
    gap: var(--space-12);
    align-items: center;
  }

  @media (min-width: 1024px) {
    .social-responsibility__container {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-16);
    }
  }

  .social-responsibility__image img {
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
  }

  .social-responsibility__eyebrow {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--theme-accent);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-3);
  }

  .social-responsibility__title {
    font-size: var(--text-3xl);
    color: var(--theme-heading);
    margin-bottom: var(--space-6);
  }

  .social-responsibility__description {
    font-size: var(--text-lg);
    color: var(--theme-text-muted);
    margin-bottom: var(--space-8);
    line-height: var(--leading-relaxed);
  }

  .social-responsibility__description :global(p) {
    margin-bottom: var(--space-4);
  }

  .social-responsibility__description :global(ul) {
    list-style: none;
    padding: 0;
  }

  .social-responsibility__description :global(li) {
    position: relative;
    padding-left: var(--space-6);
    margin-bottom: var(--space-2);
  }

  .social-responsibility__description :global(li::before) {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--theme-accent);
    font-weight: var(--font-bold);
  }
</style>
