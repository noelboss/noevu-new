---
import type { RatingDisplaySection, Theme } from '../../schemas/sections';

interface Props {
  data: RatingDisplaySection;
  theme?: Theme;
}

const { data, theme } = Astro.props;
const { score, maxScore = 5, reviewCount, source, label, cta } = data;

// Calculate filled stars
const fullStars = Math.floor(score);
const hasHalfStar = score % 1 >= 0.5;
const emptyStars = Math.floor(maxScore - score - (hasHalfStar ? 0.5 : 0));
---

<section class="rating-display section--sm" data-theme={theme}>
  <div class="container">
    <div class="rating-display__content">
      <div class="rating-display__stars" aria-label={`${score} von ${maxScore} Sternen`}>
        {Array.from({ length: fullStars }).map(() => (
          <svg
            class="rating-display__star rating-display__star--filled"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
        {hasHalfStar && (
          <svg
            class="rating-display__star rating-display__star--half"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <defs>
              <linearGradient id="half">
                <stop offset="50%" stop-color="currentColor" />
                <stop offset="50%" stop-color="var(--color-neutral-300)" />
              </linearGradient>
            </defs>
            <path fill="url(#half)" d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        )}
        {Array.from({ length: emptyStars }).map(() => (
          <svg
            class="rating-display__star rating-display__star--empty"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
      </div>

      <div class="rating-display__info">
        <span class="rating-display__score">{score}</span>
        <span class="rating-display__label">{label}</span>
        {reviewCount > 0 && (
          <span class="rating-display__count">
            ({reviewCount} {reviewCount === 1 ? 'Bewertung' : 'Bewertungen'})
          </span>
        )}
        <span class="rating-display__source">auf {source}</span>
      </div>

      {cta && (
        <a
          href={cta.href}
          class={`btn btn--${cta.variant || 'secondary'} btn--sm`}
          target={cta.external ? '_blank' : undefined}
          rel={cta.external ? 'noopener noreferrer' : undefined}
        >
          {cta.label}
        </a>
      )}
    </div>
  </div>
</section>

<style>
  .rating-display {
    background-color: var(--theme-bg);
    color: var(--theme-text);
  }

  .rating-display__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    text-align: center;
  }

  .rating-display__stars {
    display: flex;
    gap: var(--space-1);
  }

  .rating-display__star {
    width: 1.5rem;
    height: 1.5rem;
  }

  .rating-display__star--filled {
    color: var(--color-accent);
  }

  .rating-display__star--half {
    color: var(--color-accent);
  }

  .rating-display__star--empty {
    color: var(--color-neutral-300);
  }

  .rating-display__info {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    font-size: var(--text-base);
  }

  .rating-display__score {
    font-weight: var(--font-bold);
    font-size: var(--text-lg);
    color: var(--theme-heading);
  }

  .rating-display__label,
  .rating-display__count,
  .rating-display__source {
    color: var(--theme-text-muted);
  }
</style>
