---
import type { FeaturesListSection, Theme } from '../../schemas/sections';

interface Props {
  data: FeaturesListSection;
  theme?: Theme;
}

const { data, theme } = Astro.props;
const { title, features, columns = '2' } = data;

const gridClass = `features-list--cols-${columns}`;
---

<section class="features-list section" data-theme={theme}>
  <div class="container">
    {title && <h2 class="features-list__title">{title}</h2>}

    <div class={`features-list__grid ${gridClass}`}>
      {features.map((feature) => (
        <div class="features-list__item">
          {feature.icon && (
            <div class="features-list__icon" aria-hidden="true">
              <Fragment set:html={feature.icon} />
            </div>
          )}
          <div class="features-list__content">
            <h3 class="features-list__item-title">{feature.title}</h3>
            {feature.description && (
              <p class="features-list__description">{feature.description}</p>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .features-list {
    background-color: var(--theme-bg);
    color: var(--theme-text);
  }

  .features-list__title {
    text-align: center;
    font-size: var(--text-3xl);
    margin-bottom: var(--space-12);
    color: var(--theme-heading);
  }

  .features-list__grid {
    display: grid;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .features-list--cols-2 {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-8);
    }

    .features-list--cols-3 {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-8);
    }
  }

  .features-list__item {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-4);
  }

  .features-list__icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background-color: var(--theme-accent);
    border-radius: var(--radius);
    color: var(--theme-accent-contrast);
  }

  .features-list__icon :global(svg) {
    width: 1.25rem;
    height: 1.25rem;
  }

  .features-list__item-title {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-2);
    color: var(--theme-heading);
  }

  .features-list__description {
    font-size: var(--text-base);
    color: var(--theme-text-muted);
    line-height: var(--leading-relaxed);
  }
</style>
