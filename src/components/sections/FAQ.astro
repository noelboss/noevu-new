---
import type { FAQSection, Theme } from '../../schemas/sections';
import { parseInlineMarkdown } from '../../utils/markdown';

interface Props {
  data: FAQSection;
  theme?: Theme;
}

const { data, theme } = Astro.props;
const { title, items } = data;
const parsedTitle = parseInlineMarkdown(title);

// Generate unique IDs for accessibility
const sectionId = `faq-${Math.random().toString(36).slice(2, 9)}`;
---

<section class="faq section" data-theme={theme}>
  <div class="container">
    {parsedTitle && <h2 class="faq__title" set:html={parsedTitle} />}

    <div class="faq__grid" role="list">
      {items.map((item, index) => {
        const itemId = `${sectionId}-${index}`;
        return (
          <div class="faq__item" data-faq-item>
            <button
              class="faq__question"
              id={`question-${itemId}`}
              aria-expanded="false"
              aria-controls={`answer-${itemId}`}
              type="button"
            >
              <span class="faq__question-text" set:html={parseInlineMarkdown(item.question)} />
              <span class="faq__icon-wrapper">
                <span class="faq__icon" aria-hidden="true">
                  <span class="faq__icon-line faq__icon-line--h"></span>
                  <span class="faq__icon-line faq__icon-line--v"></span>
                </span>
              </span>
            </button>
            <div
              class="faq__answer-wrapper"
              id={`answer-${itemId}`}
              aria-labelledby={`question-${itemId}`}
              hidden
            >
              <div class="faq__answer" set:html={item.answer} />
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>

<script>
  function initFAQAccordion() {
    const faqItems = document.querySelectorAll('[data-faq-item]');

    faqItems.forEach((item) => {
      const button = item.querySelector('.faq__question') as HTMLButtonElement;
      const answerWrapper = item.querySelector('.faq__answer-wrapper') as HTMLElement;

      if (!button || !answerWrapper) return;

      button.addEventListener('click', () => {
        const isExpanded = button.getAttribute('aria-expanded') === 'true';

        // Close all other items (accordion behavior)
        faqItems.forEach((otherItem) => {
          if (otherItem !== item) {
            const otherButton = otherItem.querySelector('.faq__question') as HTMLButtonElement;
            const otherWrapper = otherItem.querySelector('.faq__answer-wrapper') as HTMLElement;
            if (otherButton && otherWrapper) {
              otherButton.setAttribute('aria-expanded', 'false');
              otherWrapper.hidden = true;
              otherWrapper.style.maxHeight = '0';
            }
          }
        });

        // Toggle current item
        if (isExpanded) {
          button.setAttribute('aria-expanded', 'false');
          answerWrapper.style.maxHeight = '0';
          // Wait for animation to complete before hiding
          setTimeout(() => {
            answerWrapper.hidden = true;
          }, 300);
        } else {
          button.setAttribute('aria-expanded', 'true');
          answerWrapper.hidden = false;
          // Force reflow for animation
          answerWrapper.offsetHeight;
          answerWrapper.style.maxHeight = answerWrapper.scrollHeight + 'px';
        }
      });
    });
  }

  // Initialize on page load
  initFAQAccordion();

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initFAQAccordion);
</script>

<style>
  .faq {
    background-color: var(--color-bg-cream);
  }

  /* When theme is applied, use theme variables */
  .faq[data-theme] {
    background-color: var(--theme-bg);
    color: var(--theme-text);
  }

  .faq__title {
    text-align: center;
    font-size: var(--text-3xl);
    margin-bottom: var(--space-12);
    color: var(--color-primary);
  }

  .faq[data-theme] .faq__title {
    color: var(--theme-heading);
  }

  /* Two-column grid layout matching original design */
  .faq__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0 var(--space-12);
    max-width: 1100px;
    margin-inline: auto;
  }

  @media (max-width: 768px) {
    .faq__grid {
      grid-template-columns: 1fr;
    }
  }

  .faq__item {
    border-bottom: 1px solid var(--color-neutral-300);
  }

  .faq[data-theme] .faq__item {
    border-bottom-color: var(--theme-border);
  }

  /* Question button - comprehensive reset matching original */
  .faq__question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-4);
    width: 100%;
    padding: var(--space-5) 0;
    font-family: var(--font-sans);
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    font-style: inherit;
    text-align: left;
    text-transform: inherit;
    letter-spacing: inherit;
    cursor: pointer;
    background: transparent;
    border: none;
    color: var(--color-text);
    -webkit-appearance: none;
    touch-action: manipulation;
    transition: color var(--transition);
  }

  .faq__question:hover {
    color: var(--color-primary);
  }

  .faq[data-theme] .faq__question {
    color: var(--theme-text);
  }

  .faq[data-theme] .faq__question:hover {
    color: var(--theme-accent);
  }

  .faq__question-text {
    flex: 1;
    line-height: var(--leading-snug);
  }

  /* Icon wrapper with orange dot accent */
  .faq__icon-wrapper {
    position: relative;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
  }

  /* Orange dot accent on hover/active */
  .faq__icon-wrapper::before {
    content: '';
    position: absolute;
    width: 6px;
    height: 6px;
    background-color: var(--color-accent);
    border-radius: 50%;
    top: -2px;
    right: -2px;
    opacity: 0;
    transform: scale(0.5);
    transition: opacity 0.2s ease-in-out, transform 0.2s ease-in-out;
    box-shadow: 0 0 6px hsla(var(--color-orange-hsl), 0.6);
  }

  .faq__question:hover .faq__icon-wrapper::before,
  .faq__question[aria-expanded="true"] .faq__icon-wrapper::before {
    opacity: 1;
    transform: scale(1);
  }

  /* Plus/minus icon using CSS */
  .faq__icon {
    position: relative;
    width: 14px;
    height: 14px;
  }

  .faq__icon-line {
    position: absolute;
    background-color: var(--color-primary);
    /* 0.2s timing matching original Squarespace accordion */
    transition: transform 0.2s ease-in-out;
  }

  .faq[data-theme] .faq__icon-line {
    background-color: var(--theme-accent);
  }

  .faq__icon-line--h {
    width: 100%;
    height: 2px;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
  }

  .faq__icon-line--v {
    width: 2px;
    height: 100%;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  /* Rotate vertical line to form minus when expanded (matches original) */
  .faq__question[aria-expanded="true"] .faq__icon-line--v {
    transform: translateX(-50%) rotate(0deg);
  }

  /* Answer wrapper for smooth animation */
  .faq__answer-wrapper {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }

  .faq__answer-wrapper[hidden] {
    display: block;
  }

  .faq__answer {
    padding-bottom: var(--space-6);
    color: var(--color-text-muted);
    line-height: var(--leading-relaxed);
    font-size: var(--text-base);
  }

  .faq[data-theme] .faq__answer {
    color: var(--theme-text-muted);
  }

  .faq__answer :global(p) {
    margin-bottom: var(--space-4);
  }

  .faq__answer :global(p:last-child) {
    margin-bottom: 0;
  }

  .faq__answer :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
    transition: color var(--transition-fast);
  }

  .faq__answer :global(a:hover) {
    color: var(--color-primary-700);
  }

  .faq[data-theme] .faq__answer :global(a) {
    color: var(--theme-link);
  }

  .faq[data-theme] .faq__answer :global(a:hover) {
    color: var(--theme-link-hover);
  }

  .faq__answer :global(ul) {
    margin-top: var(--space-2);
    margin-bottom: var(--space-4);
    padding-left: var(--space-6);
  }

  .faq__answer :global(li) {
    margin-bottom: var(--space-2);
  }

  .faq__answer :global(strong) {
    font-weight: var(--font-semibold);
  }

  /* Focus styles for accessibility */
  .faq__question:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
    border-radius: var(--radius-sm);
  }

  .faq[data-theme] .faq__question:focus-visible {
    outline-color: var(--theme-accent);
  }

  /* Respect user's motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .faq__answer-wrapper {
      transition: none !important;
    }
    .faq__icon-line {
      transition: none !important;
    }
    .faq__icon-wrapper::before {
      transition: none !important;
    }
  }
</style>
