---
import type { TestimonialsSection, Theme } from '../../schemas/sections';
import { parseInlineMarkdown } from '../../utils/markdown';

interface Props {
  data: TestimonialsSection;
  theme?: Theme;
}

const { data, theme } = Astro.props;
const { title, rating, testimonials } = data;
const parsedTitle = parseInlineMarkdown(title);
---

<section class="testimonials section" data-theme={theme}>
  <div class="testimonials__background"></div>
  <div class="container testimonials__container">
    {(title || rating) && (
      <div class="testimonials__header">
        {parsedTitle && <h2 class="testimonials__title" set:html={parsedTitle} />}
        {rating && (
          <div class="testimonials__rating">
            <div class="testimonials__rating-content">
              <span class="testimonials__rating-value">{rating.average}</span>
              <div class="testimonials__stars" aria-label={`${rating.average} von 5 Sternen`}>
                {Array.from({ length: 5 }).map((_, i) => (
                  <span
                    class={`material-symbols-outlined testimonials__star ${i < Math.floor(rating.average) ? 'testimonials__star--filled' : ''}`}
                    aria-hidden="true"
                  >star</span>
                ))}
              </div>
              {rating.source && (
                <div class="testimonials__source">
                  <span class="testimonials__source-text">auf</span>
                  <img
                    src="https://www.google.com/images/branding/googlelogo/2x/googlelogo_color_92x30dp.png"
                    alt="Google"
                    class="testimonials__google-logo"
                  />
                </div>
              )}
            </div>
            <span class="testimonials__rating-count">
              ({rating.count} Bewertungen)
            </span>
          </div>
        )}
      </div>
    )}

    <div class="testimonials__grid">
      {testimonials.map((testimonial, index) => (
        <blockquote class={`testimonials__item ${index % 2 === 1 ? 'testimonials__item--offset' : ''}`}>
          {testimonial.rating && (
            <div class="testimonials__item-stars">
              {Array.from({ length: testimonial.rating }).map(() => (
                <span class="material-symbols-outlined" aria-hidden="true">star</span>
              ))}
            </div>
          )}
          <p class="testimonials__quote">
            <span class="testimonials__quote-mark">&bdquo;</span>
            <span set:html={parseInlineMarkdown(testimonial.quote)} />
            <span class="testimonials__quote-mark">&ldquo;</span>
          </p>
          <footer class="testimonials__footer">
            {testimonial.image && (
              <img
                src={testimonial.image.src}
                alt={testimonial.image.alt || testimonial.author}
                class="testimonials__avatar"
                loading="lazy"
              />
            )}
            <div class="testimonials__author">
              <cite class="testimonials__name">{testimonial.author}</cite>
              {(testimonial.role || testimonial.company) && (
                <span class="testimonials__role">
                  {testimonial.company}
                  {testimonial.role && testimonial.company && ' â€“ '}
                  {testimonial.role}
                </span>
              )}
            </div>
          </footer>
        </blockquote>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials {
    position: relative;
    overflow: hidden;
  }

  .testimonials__background {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 180, 148, 0.4) 0%,
      rgba(255, 220, 200, 0.3) 30%,
      rgba(245, 240, 235, 0.5) 50%,
      rgba(200, 230, 220, 0.4) 70%,
      rgba(160, 210, 195, 0.35) 100%
    );
    z-index: 0;
  }

  .testimonials__container {
    position: relative;
    z-index: 1;
  }

  /* Theme system styles */
  .testimonials[data-theme] {
    background-color: var(--theme-bg);
    color: var(--theme-text);
  }

  .testimonials[data-theme] .testimonials__background {
    opacity: 0.5;
  }

  .testimonials[data-theme] .testimonials__title {
    color: var(--theme-heading);
  }

  .testimonials[data-theme] .testimonials__item {
    background-color: var(--theme-card-bg, hsla(var(--color-white-hsl), 0.75));
  }

  .testimonials[data-theme] .testimonials__rating-count,
  .testimonials[data-theme] .testimonials__source-text,
  .testimonials[data-theme] .testimonials__role {
    color: var(--theme-muted);
  }

  .testimonials__header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .testimonials__title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-6);
    color: var(--color-primary);
  }

  .testimonials__rating {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }

  .testimonials__rating-content {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    flex-wrap: wrap;
    justify-content: center;
  }

  .testimonials__rating-value {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    color: var(--color-text);
    line-height: 1;
  }

  .testimonials__stars {
    display: flex;
    gap: 0.125rem;
  }

  .testimonials__star {
    font-size: 1.5rem;
    color: var(--color-neutral-300);
  }

  .testimonials__star--filled {
    color: var(--color-accent);
    font-variation-settings: 'FILL' 1;
  }

  .testimonials__source {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .testimonials__source-text {
    font-size: var(--text-base);
    color: var(--color-text-muted);
  }

  .testimonials__google-logo {
    height: 1.25rem;
    width: auto;
  }

  .testimonials__rating-count {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .testimonials__grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    max-width: 1100px;
    margin-inline: auto;
  }

  @media (min-width: 768px) {
    .testimonials__grid {
      flex-direction: row;
      align-items: flex-start;
      gap: var(--space-8);
    }
  }

  /* Testimonial card with 3D transforms and glass effect */
  .testimonials__item {
    flex: 1;
    margin: 0;
    padding: var(--space-8);
    border-radius: var(--radius-xl);

    /* Glass effect */
    background-color: hsla(var(--color-white-hsl), 0.75);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);

    /* 3D perspective setup */
    transform-style: preserve-3d;

    /* 3-layer shadow pattern: outer glow, spread glow, inset highlight */
    box-shadow:
      0px 0px 15px hsla(17, 100%, 59%, 0.15),
      8px 8px 40px hsla(var(--color-white-hsl), 0.5),
      inset -5px -5px 10px hsla(17, 100%, 59%, 0.08);

    /* Inner glass richness */
    position: relative;

    transition:
      transform 0.3s ease-out,
      box-shadow 0.3s ease-out,
      filter 0.3s ease-out,
      background-color 0.3s ease-out;
  }

  .testimonials__item::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    box-shadow:
      inset 5px 0 20px 0 hsla(var(--color-white-hsl), 0.5),
      inset 0 -30px 30px 0 hsla(var(--color-white-hsl), 0.3);
    pointer-events: none;
    transition: box-shadow 0.3s ease-out;
  }

  .testimonials__item:hover {
    /* 3D rotation effect */
    transform: perspective(1000px) rotateX(2deg) rotateY(-3deg) translateZ(10px);
    filter: brightness(1.05) saturate(1.1);

    /* Enhanced shadow on hover */
    box-shadow:
      0px 0px 20px hsla(17, 100%, 59%, 0.25),
      12px 12px 50px hsla(var(--color-white-hsl), 0.6),
      inset -5px -5px 10px hsla(17, 100%, 59%, 0.12);
  }

  .testimonials__item:hover::before {
    box-shadow:
      inset 0 0px 20px 0 hsla(var(--color-white-hsl), 0.75),
      inset 10px -30px 20px 0 hsla(var(--color-white-hsl), 0.5);
  }

  @media (min-width: 768px) {
    .testimonials__item--offset {
      margin-top: var(--space-16);
    }
  }

  .testimonials__item-stars {
    display: flex;
    gap: 0.125rem;
    margin-bottom: var(--space-4);
  }

  .testimonials__item-stars .material-symbols-outlined {
    font-size: 1.125rem;
    color: var(--color-accent);
    font-variation-settings: 'FILL' 1;
    transition: transform 0.2s ease-out;
  }

  .testimonials__item:hover .testimonials__item-stars .material-symbols-outlined {
    transform: scale(1.1);
  }

  /* Quote styling */
  .testimonials__quote {
    position: relative;
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
    color: var(--color-primary);
    font-style: normal;
    font-weight: var(--font-medium);
  }

  .testimonials__quote-mark {
    color: var(--color-orange, #ff6b30);
    font-size: 1.5em;
    line-height: 0;
    vertical-align: -0.2em;
    opacity: 0.6;
    transition: opacity 0.3s ease-out;
  }

  .testimonials__item:hover .testimonials__quote-mark {
    opacity: 1;
  }

  .testimonials__footer {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding-top: var(--space-4);
    border-top: 1px solid hsla(var(--color-black-hsl), 0.06);
  }

  /* Avatar with enhanced hover effects */
  .testimonials__avatar {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: var(--radius-full);
    object-fit: cover;
    flex-shrink: 0;
    border: 2px solid hsla(var(--color-white-hsl), 0.8);
    box-shadow: 0.1em 0.1em 0.2em hsla(var(--color-black-hsl), 0.1);
    transition:
      transform 0.3s ease-in-out,
      box-shadow 0.3s ease-in-out;
  }

  .testimonials__item:hover .testimonials__avatar {
    transform: scale(1.1);
    box-shadow: 0.1em 0.1em 0.4em hsla(17, 100%, 59%, 0.3);
  }

  .testimonials__author {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .testimonials__name {
    font-style: normal;
    font-weight: var(--font-semibold);
    font-size: var(--text-sm);
    color: var(--color-text);
    line-height: 1.3;
  }

  .testimonials__role {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    line-height: 1.3;
    opacity: 0.8;
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .testimonials__item {
      padding: var(--space-6);
    }

    .testimonials__rating-value {
      font-size: var(--text-3xl);
    }

    /* Reduce 3D effect on mobile for performance */
    .testimonials__item:hover {
      transform: translateY(-4px);
    }
  }

  /* Dark theme adjustments */
  [data-theme="dark"] .testimonials__item,
  [data-theme="dark-bold"] .testimonials__item,
  [data-theme="black"] .testimonials__item,
  [data-theme="black-bold"] .testimonials__item {
    background: hsla(var(--color-white-hsl), 0.08);
    border: 1px solid hsla(var(--color-white-hsl), 0.1);
    box-shadow:
      0px 0px 15px hsla(167, 18%, 46%, 0.15),
      8px 8px 40px hsla(var(--color-grey-hsl), 0.3),
      inset -5px -5px 10px hsla(167, 18%, 46%, 0.05);
  }

  [data-theme="dark"] .testimonials__item::before,
  [data-theme="dark-bold"] .testimonials__item::before,
  [data-theme="black"] .testimonials__item::before,
  [data-theme="black-bold"] .testimonials__item::before {
    box-shadow:
      inset 5px 0 20px 0 hsla(var(--color-white-hsl), 0.1),
      inset 0 -30px 30px 0 hsla(var(--color-white-hsl), 0.05);
  }

  [data-theme="dark"] .testimonials__item:hover,
  [data-theme="dark-bold"] .testimonials__item:hover,
  [data-theme="black"] .testimonials__item:hover,
  [data-theme="black-bold"] .testimonials__item:hover {
    box-shadow:
      0px 0px 20px hsla(167, 18%, 46%, 0.25),
      12px 12px 50px hsla(var(--color-grey-hsl), 0.4),
      inset -5px -5px 10px hsla(167, 18%, 46%, 0.08);
  }

  [data-theme="dark"] .testimonials__item:hover::before,
  [data-theme="dark-bold"] .testimonials__item:hover::before,
  [data-theme="black"] .testimonials__item:hover::before,
  [data-theme="black-bold"] .testimonials__item:hover::before {
    box-shadow:
      inset 0 0px 20px 0 hsla(var(--color-white-hsl), 0.15),
      inset 10px -30px 20px 0 hsla(var(--color-white-hsl), 0.1);
  }

  [data-theme="dark"] .testimonials__footer,
  [data-theme="dark-bold"] .testimonials__footer,
  [data-theme="black"] .testimonials__footer,
  [data-theme="black-bold"] .testimonials__footer {
    border-top-color: hsla(var(--color-white-hsl), 0.1);
  }

  [data-theme="dark"] .testimonials__quote,
  [data-theme="dark-bold"] .testimonials__quote,
  [data-theme="black"] .testimonials__quote,
  [data-theme="black-bold"] .testimonials__quote {
    color: var(--theme-text, var(--color-white));
  }

  [data-theme="dark"] .testimonials__name,
  [data-theme="dark-bold"] .testimonials__name,
  [data-theme="black"] .testimonials__name,
  [data-theme="black-bold"] .testimonials__name {
    color: var(--theme-heading, var(--color-white));
  }
</style>
