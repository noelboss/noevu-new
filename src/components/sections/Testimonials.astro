---
import type { TestimonialsSection, Theme } from '../../schemas/sections';

interface Props {
  data: TestimonialsSection;
  theme?: Theme;
}

const { data, theme } = Astro.props;
const { title, rating, testimonials } = data;
---

<section class="testimonials section" data-theme={theme}>
  <div class="testimonials__background"></div>
  <div class="container testimonials__container">
    {(title || rating) && (
      <div class="testimonials__header">
        {title && <h2 class="testimonials__title">{title}</h2>}
        {rating && (
          <div class="testimonials__rating">
            <div class="testimonials__rating-content">
              <span class="testimonials__rating-value">{rating.average}</span>
              <div class="testimonials__stars" aria-label={`${rating.average} von 5 Sternen`}>
                {Array.from({ length: 5 }).map((_, i) => (
                  <span
                    class={`material-symbols-outlined testimonials__star ${i < Math.floor(rating.average) ? 'testimonials__star--filled' : ''}`}
                    aria-hidden="true"
                  >star</span>
                ))}
              </div>
              {rating.source && (
                <div class="testimonials__source">
                  <span class="testimonials__source-text">auf</span>
                  <img
                    src="https://www.google.com/images/branding/googlelogo/2x/googlelogo_color_92x30dp.png"
                    alt="Google"
                    class="testimonials__google-logo"
                  />
                </div>
              )}
            </div>
            <span class="testimonials__rating-count">
              ({rating.count} Bewertungen)
            </span>
          </div>
        )}
      </div>
    )}

    <div class="testimonials__grid">
      {testimonials.map((testimonial, index) => (
        <blockquote class={`testimonials__item ${index % 2 === 1 ? 'testimonials__item--offset' : ''}`}>
          {testimonial.rating && (
            <div class="testimonials__item-stars">
              {Array.from({ length: testimonial.rating }).map(() => (
                <span class="material-symbols-outlined" aria-hidden="true">star</span>
              ))}
            </div>
          )}
          <p class="testimonials__quote">
            <span class="testimonials__quote-mark">&bdquo;</span>
            {testimonial.quote}
            <span class="testimonials__quote-mark">&ldquo;</span>
          </p>
          <footer class="testimonials__footer">
            {testimonial.image && (
              <img
                src={testimonial.image.src}
                alt={testimonial.image.alt || testimonial.author}
                class="testimonials__avatar"
                loading="lazy"
              />
            )}
            <div class="testimonials__author">
              <cite class="testimonials__name">{testimonial.author}</cite>
              {(testimonial.role || testimonial.company) && (
                <span class="testimonials__role">
                  {testimonial.company}
                  {testimonial.role && testimonial.company && ' â€“ '}
                  {testimonial.role}
                </span>
              )}
            </div>
          </footer>
        </blockquote>
      ))}
    </div>
  </div>
</section>

<style>
  .testimonials {
    position: relative;
    overflow: hidden;
  }

  .testimonials__background {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 180, 148, 0.4) 0%,
      rgba(255, 220, 200, 0.3) 30%,
      rgba(245, 240, 235, 0.5) 50%,
      rgba(200, 230, 220, 0.4) 70%,
      rgba(160, 210, 195, 0.35) 100%
    );
    z-index: 0;
  }

  .testimonials__container {
    position: relative;
    z-index: 1;
  }

  /* Theme system styles */
  .testimonials[data-theme] {
    background-color: var(--theme-bg);
    color: var(--theme-text);
  }

  .testimonials[data-theme] .testimonials__background {
    opacity: 0.5;
  }

  .testimonials[data-theme] .testimonials__title {
    color: var(--theme-heading);
  }

  .testimonials[data-theme] .testimonials__item {
    background-color: var(--theme-card-bg, rgba(255, 255, 255, 0.85));
  }

  .testimonials[data-theme] .testimonials__rating-count,
  .testimonials[data-theme] .testimonials__source-text,
  .testimonials[data-theme] .testimonials__role {
    color: var(--theme-muted);
  }

  .testimonials__header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .testimonials__title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-6);
    color: var(--color-primary);
  }

  .testimonials__rating {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }

  .testimonials__rating-content {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    flex-wrap: wrap;
    justify-content: center;
  }

  .testimonials__rating-value {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    color: var(--color-text);
    line-height: 1;
  }

  .testimonials__stars {
    display: flex;
    gap: 0.125rem;
  }

  .testimonials__star {
    font-size: 1.5rem;
    color: var(--color-neutral-300);
  }

  .testimonials__star--filled {
    color: var(--color-accent);
    font-variation-settings: 'FILL' 1;
  }

  .testimonials__source {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .testimonials__source-text {
    font-size: var(--text-base);
    color: var(--color-text-muted);
  }

  .testimonials__google-logo {
    height: 1.25rem;
    width: auto;
  }

  .testimonials__rating-count {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .testimonials__grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    max-width: 1100px;
    margin-inline: auto;
  }

  @media (min-width: 768px) {
    .testimonials__grid {
      flex-direction: row;
      align-items: flex-start;
      gap: var(--space-8);
    }
  }

  .testimonials__item {
    flex: 1;
    background-color: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-xl);
    padding: var(--space-8);
    margin: 0;
    box-shadow:
      0 4px 20px -4px rgba(0, 0, 0, 0.08),
      0 8px 32px -8px rgba(0, 0, 0, 0.06);
    transition: transform var(--transition), box-shadow var(--transition);
  }

  .testimonials__item:hover {
    transform: translateY(-4px);
    box-shadow:
      0 8px 30px -4px rgba(0, 0, 0, 0.1),
      0 16px 48px -8px rgba(0, 0, 0, 0.08);
  }

  @media (min-width: 768px) {
    .testimonials__item--offset {
      margin-top: var(--space-16);
    }
  }

  .testimonials__item-stars {
    display: flex;
    gap: 0.125rem;
    margin-bottom: var(--space-4);
  }

  .testimonials__item-stars .material-symbols-outlined {
    font-size: 1.125rem;
    color: var(--color-accent);
    font-variation-settings: 'FILL' 1;
  }

  .testimonials__quote {
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
    color: var(--color-primary);
    font-style: normal;
    font-weight: var(--font-medium);
  }

  .testimonials__quote-mark {
    color: var(--color-primary);
  }

  .testimonials__footer {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding-top: var(--space-4);
    border-top: 1px solid rgba(0, 0, 0, 0.06);
  }

  .testimonials__avatar {
    width: 3rem;
    height: 3rem;
    border-radius: var(--radius-full);
    object-fit: cover;
    flex-shrink: 0;
  }

  .testimonials__author {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .testimonials__name {
    font-style: normal;
    font-weight: var(--font-semibold);
    font-size: var(--text-sm);
    color: var(--color-text);
  }

  .testimonials__role {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .testimonials__item {
      padding: var(--space-6);
    }

    .testimonials__rating-value {
      font-size: var(--text-3xl);
    }
  }
</style>
